@using Microsoft.AspNetCore.Mvc.Localization
@model Web.IdP.Services.DeviceVerificationViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-50 py-12 sm:px-6 lg:px-8 font-sans">
    <div class="text-center mb-8 max-w-sm">
        <!-- Brand / Header -->
        <h2 class="text-3xl font-extrabold text-gray-900 mb-2">
            @Localizer["Header"]
        </h2>
        <p class="text-gray-500">
            @Localizer["Instruction"]
        </p>
    </div>

    <div class="max-w-md w-full bg-white shadow-sm rounded-lg border border-gray-100 overflow-hidden">
        <div class="p-6 sm:p-10">
            <form method="post" class="space-y-6">
                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    <div class="bg-red-50 border-l-4 border-red-400 p-4 flex items-start mb-6">
                         <i class="bi bi-exclamation-triangle-fill text-red-400 mr-3 mt-0.5 text-lg"></i>
                        <div class="text-red-700 text-sm">
                            @Model.ErrorDescription
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.ApplicationName))
                {
                    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 flex items-start mb-6">
                         <i class="bi bi-info-circle-fill text-blue-400 mr-3 mt-0.5 text-lg"></i>
                        <div class="text-blue-700 text-sm">
                            @Localizer["AppRequestAccess", Model.ApplicationName]
                        </div>
                    </div>
                }

                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="bg-green-50 border-l-4 border-green-400 p-4 flex items-start mb-6">
                         <i class="bi bi-check-circle-fill text-green-400 mr-3 mt-0.5 text-lg"></i>
                        <div class="text-green-700 text-sm">
                            @ViewData["SuccessMessage"]
                        </div>
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 p-3 rounded-md text-sm mb-6 hidden empty:hidden"></div>

                <div>
                    <label asp-for="UserCode" class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">
                        @Localizer["UserCodeLabel"]
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        @* Explicitly set name="user_code" to match [BindProperty(Name="user_code")] *@
                        <input asp-for="UserCode" 
                               name="user_code"
                               class="block w-full text-center border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:text-2xl font-mono tracking-widest uppercase py-3" 
                               style="letter-spacing: 0.2em;"
                               placeholder="XXXX-XXXX-XXXX" 
                               maxlength="15"
                               autofocus 
                               autocomplete="off" />
                    </div>
                    <span asp-validation-for="UserCode" class="text-red-600 text-sm mt-1 block"></span>
                </div>

                <div>
                     <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-bold text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                        @Localizer["ContinueButton"]
                    </button>
                </div>
                
                <div class="text-center mt-4">
                    <a href="/" class="text-sm font-bold text-indigo-600 hover:text-indigo-500 transition-colors">
                        @Localizer["CancelLink"]
                    </a>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-8">
        <p class="text-gray-400 text-xs">
            @Localizer["Footer"]
        </p>
    </div>
</div>

@section Scripts {
    <script src="~/js/device-flow.js" asp-append-version="true"></script>
}
