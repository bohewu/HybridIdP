@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SuccessTitle"];
}

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-50 py-12 sm:px-6 lg:px-8 font-sans">
    <div class="max-w-md w-full bg-white shadow-sm rounded-lg border border-gray-100 overflow-hidden">
        <div class="p-6 sm:p-10 text-center">
            <div class="mb-6 text-green-500 flex justify-center">
                <i class="bi bi-check-circle-fill text-6xl"></i>
            </div>
            
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
                @Localizer["SuccessHeader"]
            </h2>
            
            <p class="text-gray-500 mb-6">
                @Localizer["SuccessMessage"]
            </p>

            <div class="bg-blue-50 border-l-4 border-blue-400 p-4 text-left rounded-r-md flex items-start">
                 <i class="bi bi-info-circle-fill text-blue-400 mr-3 mt-0.5 text-lg"></i>
                <small class="text-blue-700">@Localizer["SuccessNote"]</small>
            </div>
        </div>
    </div>
</div>
