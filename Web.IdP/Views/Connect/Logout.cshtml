@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Log out"];
    Layout = "~/Pages/Shared/_SimpleLayout.cshtml";
}

<div class="google-login-card">
    <div class="google-login-header mb-6 text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-red-100 mb-4">
             <i class="bi bi-box-arrow-right text-2xl text-red-600"></i>
        </div>
        <h1 class="text-2xl font-normal text-gray-900 mb-2">@Localizer["Log out"]</h1>
        <p class="text-base text-gray-600">@Localizer["Are you sure you want to sign out?"]</p>
    </div>
    
    <div class="google-login-body">
         <form asp-controller="Logout" asp-action="Logout" method="post" class="space-y-4">
            <!-- Propagate query parameters e.g., post_logout_redirect_uri -->
            @foreach (var query in Context.Request.Query)
            {
                <input type="hidden" name="@query.Key" value="@query.Value" />
            }
            <div class="flex flex-col gap-3">
                <button type="submit" class="btn-google-blue w-full justify-center">
                     @Localizer["Yes, Sign Out"]
                </button>
                <a href="/" class="btn-google-white w-full justify-center">
                    @Localizer["Cancel"]
                </a>
            </div>
        </form>
    </div>
</div>
