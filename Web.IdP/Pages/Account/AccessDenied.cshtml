@page
@model Web.IdP.Pages.Account.AccessDeniedModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["AccessDeniedTitle"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-shield-exclamation"></i> @Localizer["AccessDeniedTitle"]
                    </h2>
                </div>
                <div class="card-body">
                    <p class="lead">@Localizer["AccessDeniedMessage"]</p>
                    <p>@Localizer["AdminPrivilegesRequired"]</p>
                    
                    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                    {
                        <div class="alert alert-info">
                            <strong>@Localizer["RequestedUrl"]</strong> <code>@Model.ReturnUrl</code>
                        </div>
                    }
                    
                    <hr />
                    
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> @Localizer["ReturnHome"]
                        </a>
                        <a href="/Account/Logout" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-right"></i> @Localizer["LogoutAndSwitch"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
