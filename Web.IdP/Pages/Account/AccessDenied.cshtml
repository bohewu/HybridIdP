@page
@model Web.IdP.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-shield-exclamation"></i> Access Denied
                    </h2>
                </div>
                <div class="card-body">
                    <p class="lead">You do not have permission to access this resource.</p>
                    <p>This area requires administrative privileges. If you believe you should have access, please contact your system administrator.</p>
                    
                    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                    {
                        <div class="alert alert-info">
                            <strong>Requested URL:</strong> <code>@Model.ReturnUrl</code>
                        </div>
                    }
                    
                    <hr />
                    
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Return to Home
                        </a>
                        <a href="/Account/Logout" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout and Login as Different User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
