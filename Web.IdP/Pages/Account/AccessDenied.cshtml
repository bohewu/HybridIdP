@page
@model Web.IdP.Pages.Account.AccessDeniedModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["AccessDeniedTitle"];
    Layout = "_SimpleLayout";
}

<div class="google-login-card">
    <div class="google-login-header mb-6 text-center">
         <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-red-100 mb-4">
            <i class="bi bi-shield-exclamation text-2xl text-red-600"></i>
        </div>
        <h1 class="text-2xl font-normal text-gray-900 mb-2">@ViewData["Title"]</h1>
        <p class="text-base text-gray-600">@Localizer["AccessDeniedMessage"]</p>
    </div>
    
    <div class="google-login-body">
        <p class="text-center text-sm text-gray-500 mb-6">@Localizer["AdminPrivilegesRequired"]</p>
        
        @if (!string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div class="bg-gray-50 border border-gray-200 rounded-md p-3 mb-6 flex items-start gap-3">
                <i class="bi bi-info-circle text-blue-600 mt-0.5"></i>
                <div class="text-xs text-gray-600 break-all">
                    <strong>@Localizer["RequestedUrl"]:</strong> @Model.ReturnUrl
                </div>
            </div>
        }
        
        <div class="flex flex-col gap-3">
            <a href="/" class="btn-google-blue w-full justify-center text-center no-underline">
                @Localizer["ReturnHome"]
            </a>
            <a href="/Account/Logout" class="btn-google-white w-full justify-center text-center no-underline">
                @Localizer["LogoutAndSwitch"]
            </a>
        </div>
    </div>
</div>
