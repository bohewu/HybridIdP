@page
@model Web.IdP.Pages.Account.LoginModel
@using Web.IdP.TagHelpers
@using Web.IdP.Services
@using Core.Application
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@inject IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject IViteManifestService ViteService
@inject IBrandingService BrandingService
@{
    ViewData["Title"] = Localizer["Login"];
    Layout = null;
    var currentCulture = HttpContext.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "en-US";
    var productName = await BrandingService.GetProductNameAsync();
}

<!DOCTYPE html>
<html lang="@currentCulture" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @productName</title>
    
    @* Tailwind CSS *@
    @if (ViteService.IsDevelopment)
    {
        <script type="module" vite-src="@@vite/client"></script>
    }
    <link href="@ViteService.GetScriptPath("src/styles/main.css")" rel="stylesheet" />
    <script type="module" vite-src="src/scripts/razor.js"></script>
    
    @* Legacy auth styles - keep until fully migrated or remove if covered by Tailwind *@
    @* <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true"/> *@
</head>
<body class="h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center relative">
            <div class="absolute top-0 right-0">
                 <partial name="_LanguageSelector" />
            </div>

            <h1 class="mt-6 text-3xl font-extrabold text-gray-900">@productName</h1>
            
            <h2 class="mt-2 text-2xl font-bold text-gray-900">@ViewData["Title"]</h2>
            <p class="mt-2 text-sm text-gray-600">@Localizer["SignInToContinue"]</p>
        </div>

        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 border border-gray-200">
            <form method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 p-4 rounded-md text-sm mb-4" role="alert" data-test-id="login-error-summary"></div>
                
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div>
                    <label for="Input_Login" class="block text-sm font-medium text-gray-700">@Localizer["EmailOrUsername"]</label>
                    <div class="mt-1">
                        <input asp-for="Input.Login" type="text" 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" 
                               placeholder="@Localizer["EmailOrUsername"]" autocomplete="username" autofocus aria-label="@Localizer["EmailOrUsername"]" data-test-id="login-username" />
                    </div>
                    <span asp-validation-for="Input.Login" class="text-red-500 text-xs mt-1 block" data-test-id="login-username-error"></span>
                </div>
                
                <div>
                    <label for="Input_Password" class="block text-sm font-medium text-gray-700">@Localizer["Password"]</label>
                    <div class="mt-1">
                        <input asp-for="Input.Password" 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" 
                               placeholder="@Localizer["Password"]" autocomplete="current-password" data-test-id="login-password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1 block" data-test-id="login-password-error"></span>
                </div>
                
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" data-test-id="login-remember" />
                        <label for="Input_RememberMe" class="ml-2 block text-sm text-gray-900">@Localizer["RememberMe"]</label>
                    </div>
                </div>
                
                @if (Model.TurnstileEnabled)
                {
                    <div class="mt-4">
                        <div class="cf-turnstile" data-sitekey="@Model.TurnstileSiteKey" data-callback="onTurnstileSuccess" data-expired-callback="onTurnstileExpired"></div>
                    </div>
                }
                
                <div>
                    @if (Model.TurnstileEnabled)
                    {
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed" data-test-id="login-submit" id="loginSubmitBtn" disabled>
                            <span id="loginBtnText">@Localizer["Login"]</span>
                            <span id="loginBtnLoading" class="hidden flex items-center">
                                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                @Localizer["PleaseCompleteCaptcha"]
                            </span>
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" data-test-id="login-submit">@Localizer["Login"]</button>
                    }
                </div>
                
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">
                                @if (Model.RegistrationEnabled)
                                {
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-blue-600 hover:text-blue-500">@Localizer["DontHaveAccountRegister"]</a>
                                }
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Replaced Bootstrap Script with nothing for now, as Login typically just needs minimal JS *@
    @* Legacy auth styles - keep until fully migrated or remove if covered by Tailwind *@
    @* <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true"/> *@
    @if (Model.TurnstileEnabled)
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    }
</body>
</html>
 