@page
@model Web.IdP.Pages.Account.LoginModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@using Core.Application
@inject IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Login"];
    Layout = null;
    var currentCulture = HttpContext.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "en-US";
}

<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HybridAuth IdP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true"/>
</head>
<body>
    <div class="auth-container">
        <div class="language-selector">
            <partial name="_LanguageSelector" />
        </div>

        <div class="auth-card">
            <div class="auth-logo">
                @inject IBrandingService BrandingService
                <h1>@(await BrandingService.GetProductNameAsync())</h1>
            </div>

            <h2 class="auth-title">@ViewData["Title"]</h2>
            <p class="auth-subtitle">@Localizer["SignInToContinue"]</p>

            <form method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" data-test-id="login-error-summary"></div>
                
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div class="mb-3">
                    <label for="Input_Login" class="form-label">@Localizer["EmailOrUsername"]</label>
                    <input asp-for="Input.Login" type="text" class="form-control" placeholder="@Localizer["EmailOrUsername"]" autocomplete="username" autofocus aria-label="@Localizer["EmailOrUsername"]" data-test-id="login-username" />
                    <span asp-validation-for="Input.Login" class="text-danger" data-test-id="login-username-error"></span>
                </div>
                
                <div class="mb-3">
                    <label for="Input_Password" class="form-label">@Localizer["Password"]</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="@Localizer["Password"]" autocomplete="current-password" data-test-id="login-password" />
                    <span asp-validation-for="Input.Password" class="text-danger" data-test-id="login-password-error"></span>
                </div>
                
                <div class="form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" data-test-id="login-remember" />
                    <label for="Input_RememberMe" class="form-check-label">@Localizer["RememberMe"]</label>
                </div>
                
                @if (Model.TurnstileEnabled)
                {
                    <div class="mb-3 mt-3">
                        <div class="cf-turnstile" data-sitekey="@Model.TurnstileSiteKey" data-callback="onTurnstileSuccess" data-expired-callback="onTurnstileExpired"></div>
                    </div>
                }
                
                <div class="d-grid mt-4">
                    @if (Model.TurnstileEnabled)
                    {
                        <button type="submit" class="auth-btn-primary" data-test-id="login-submit" id="loginSubmitBtn" disabled>
                            <span id="loginBtnText">@Localizer["Login"]</span>
                            <span id="loginBtnLoading" class="d-none">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                @Localizer["PleaseCompleteCaptcha"]
                            </span>
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="auth-btn-primary" data-test-id="login-submit">@Localizer["Login"]</button>
                    }
                </div>
                
                <div class="auth-footer">
                    @if (Model.RegistrationEnabled)
                    {
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">@Localizer["DontHaveAccountRegister"]</a>
                    }
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/language.js" asp-append-version="true"></script>
    @if (Model.TurnstileEnabled)
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
        <script src="~/js/turnstile.js" asp-append-version="true"></script>
    }
</body>
</html>
 