@page
@model Web.IdP.Pages.Account.LoginModel
@using Web.IdP.TagHelpers
@using Web.IdP.Services
@using Core.Application
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@inject IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject IViteManifestService ViteService
@inject IBrandingService BrandingService
@{
    ViewData["Title"] = Localizer["Login"];
    Layout = null;
    var currentCulture = HttpContext.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "en-US";
    var productName = await BrandingService.GetProductNameAsync();
}

<!DOCTYPE html>
<html lang="@currentCulture" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @productName</title>
    
    @* Tailwind CSS *@
    @if (ViteService.IsDevelopment)
    {
        <script type="module" vite-src="@@vite/client"></script>
    }
    <link href="@ViteService.GetScriptPath("src/styles/main.css")" rel="stylesheet" />
    <script type="module" vite-src="src/scripts/razor.js"></script>
    
    @* Google Fonts - Roboto for body, will fallback gracefully *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 google-font min-h-screen flex flex-col">
    <div class="google-login-container">
        <div class="google-login-card">
            <div class="google-login-header text-center">
                 <div class="flex justify-center mb-4">
                    <div class="google-logo">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                </div>
                <h1 class="text-2xl font-normal text-gray-900 mb-2">@productName</h1>
                <h2 class="text-lg text-gray-700 font-normal">@Localizer["Login"]</h2>
                <p class="mt-1 text-sm text-gray-500">@Localizer["SignInToContinue"]</p>
            </div>
            
            <div class="google-login-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 p-3 rounded text-sm border border-red-200 mb-6" role="alert" data-test-id="login-error-summary"></div>
                    
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    <div class="space-y-4">
                        <div class="form-group">
                            <label asp-for="Input.Login" class="sr-only">@Localizer["EmailOrUsername"]</label>
                            <input asp-for="Input.Login" class="input-google" placeholder="@Localizer["EmailOrUsername"]" autocomplete="username webauthn" autofocus data-test-id="login-username" />
                            <span asp-validation-for="Input.Login" class="text-red-600 text-xs mt-1 block" data-test-id="login-username-error"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Input.Password" class="sr-only">@Localizer["Password"]</label>
                            <input asp-for="Input.Password" type="password" class="input-google" placeholder="@Localizer["Password"]" autocomplete="current-password" data-test-id="login-password" />
                            <span asp-validation-for="Input.Password" class="text-red-600 text-xs mt-1 block" data-test-id="login-password-error"></span>
                        </div>
                    </div>
                
                    @if (Model.TurnstileEnabled)
                    {
                        <div class="my-6 flex justify-center">
                            <div class="cf-turnstile" data-sitekey="@Model.TurnstileSiteKey" data-callback="onTurnstileSuccess" data-expired-callback="onTurnstileExpired"></div>
                        </div>
                    }
                    
                    <div class="flex items-center justify-between mt-8">
                        @if (Model.RegistrationEnabled)
                        {
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-google text-sm font-medium">
                                @Localizer["CreateAccount"]
                            </a>
                        }
                        else 
                        {
                            <div></div> <!-- Spacer -->
                        }

                        <div class="flex space-x-2">
                             @if (Model.PasskeyEnabled)
                             {
                                <button type="button" 
                                        id="passkeyLoginBtn"
                                        title="@Localizer["LoginWithPasskey"]"
                                        class="btn-google-outline p-2 flex items-center justify-center"
                                        data-test-id="passkey-login-btn"
                                        data-return-url="@(Model.ReturnUrl ?? Url.Content("~/"))">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                                    </svg>
                                </button>
                             }

                            <button type="submit" 
                                    class="btn-google-blue" 
                                    data-test-id="login-submit"
                                    id="loginSubmitBtn">
                                @Localizer["Login"]
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <partial name="_GoogleFooter" />
    </div>

    @if (Model.TurnstileEnabled)
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    }
</body>
</html>