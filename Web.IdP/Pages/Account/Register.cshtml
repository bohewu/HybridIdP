@page
@model Web.IdP.Pages.Account.RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using Web.IdP.Services
@using Core.Application
@inject IViewLocalizer Localizer
@inject IViteManifestService ViteService
@inject IBrandingService BrandingService
@{
    ViewData["Title"] = Localizer["Register"];
    Layout = null;
    var currentCulture = HttpContext.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "en-US";
    var productName = await BrandingService.GetProductNameAsync();
}

<!DOCTYPE html>
<html lang="@currentCulture" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @productName</title>
    
    @* Tailwind CSS *@
    @if (ViteService.IsDevelopment)
    {
        <script type="module" vite-src="@@vite/client"></script>
    }
    <link href="@ViteService.GetScriptPath("src/styles/main.css")" rel="stylesheet" />
    <script type="module" vite-src="src/scripts/razor.js"></script>
</head>
<body class="bg-gray-50 google-font">
    <div class="google-login-container">
        <div class="google-login-card">
            <div class="google-login-header text-center">
                 <div class="flex justify-center mb-4">
                    <div class="google-logo">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                </div>
                <h1 class="text-2xl font-normal text-gray-900 mb-2">@productName</h1>
                <h2 class="text-lg text-gray-700 font-normal">@Localizer["CreateAccount"]</h2>
            </div>
            
            <div class="google-login-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 p-3 rounded text-sm border border-red-200 mb-6" role="alert"></div>
                    
                    <div class="space-y-4">
                        <div class="form-group">
                            <label asp-for="Input.Email" class="sr-only">@Localizer["Email"]</label>
                            <input asp-for="Input.Email" class="input-google" placeholder="@Localizer["Email"]" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                        
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="form-group">
                                <label asp-for="Input.Password" class="sr-only">@Localizer["Password"]</label>
                                <input asp-for="Input.Password" class="input-google" placeholder="@Localizer["Password"]" autocomplete="new-password" />
                                <span asp-validation-for="Input.Password" class="text-red-600 text-xs mt-1 block"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword" class="sr-only">@Localizer["ConfirmPassword"]</label>
                                <input asp-for="Input.ConfirmPassword" class="input-google" placeholder="@Localizer["ConfirmPassword"]" autocomplete="new-password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs mt-1 block"></span>
                            </div>
                        </div>
                         <p class="text-xs text-gray-500 ml-1">@Localizer["PasswordRequirementsHelp"]</p>
                    </div>
                    
                    @if (Model.TurnstileEnabled)
                    {
                        <div class="my-6 flex justify-center">
                            <div class="cf-turnstile" data-sitekey="@Model.TurnstileSiteKey"></div>
                        </div>
                    }

                    <div class="flex items-center justify-between mt-8">
                         <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-google text-sm font-medium">
                            @Localizer["SignInInstead"]
                        </a>
                        <button type="submit" class="btn-google-blue ml-4">
                            @Localizer["Next"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="google-footer mt-4">
             <select class="language-select bg-transparent border-0 text-xs cursor-pointer focus:outline-none focus:ring-0 text-gray-600">
                <option value="en-US" selected="@(currentCulture == "en-US")">English (United States)</option>
                <option value="zh-TW" selected="@(currentCulture == "zh-TW")">繁體中文 (台灣)</option>
            </select>
            <div class="flex gap-4 text-xs">
                <a href="#" class="hover:text-gray-900">@Localizer["Help"]</a>
                <a href="#" class="hover:text-gray-900">@Localizer["Privacy"]</a>
                <a href="#" class="hover:text-gray-900">@Localizer["Terms"]</a>
            </div>
        </div>
    </div>

    @if (Model.TurnstileEnabled)
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    }
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
