@page
@model Web.IdP.Pages.Account.LinkedAccountsModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["LinkedAccountsManagement"];
}

<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8 google-font">
    <div class="mb-8">
        <h1 class="text-3xl font-medium text-gray-900">@Localizer["LinkedAccounts"]</h1>
        <p class="mt-2 text-sm text-gray-500">@Localizer["ManageYourLinkedAccounts"]</p>
    </div>

    @if (Model.LinkedAccounts.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var account in Model.LinkedAccounts)
            {
                <div class="bg-white rounded-lg border border-gray-200 overflow-hidden flex flex-col h-full hover:shadow-md transition-all duration-200 @(account.IsCurrentAccount ? "ring-2 ring-blue-500 border-transparent" : "")">
                    <div class="p-6 flex-grow">
                        <div class="flex justify-between items-start mb-4">
                            <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center text-white font-bold text-lg select-none">
                                @{
                                    var initial = string.IsNullOrEmpty(account.Email) ? "?" : account.Email.Substring(0, 1).ToUpper();
                                }
                                @initial
                            </div>
                            @if (account.IsCurrentAccount)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-100">
                                    @Localizer["CurrentAccount"]
                                </span>
                            }
                        </div>
                        
                        <h5 class="text-lg font-medium text-gray-900 mb-1 truncate" title="@(string.IsNullOrEmpty(account.UserName) ? account.Email : account.UserName)">
                            @if (!string.IsNullOrEmpty(account.UserName))
                            {
                                @account.UserName
                            }
                            else
                            {
                                @account.Email
                            }
                        </h5>
                        
                        <p class="text-sm text-gray-500 mb-4 flex items-center truncate" title="@account.Email">
                           @account.Email
                        </p>
                        
                        @if (account.Roles.Any())
                        {
                            <div class="mb-4 flex flex-wrap gap-2">
                                @foreach (var role in account.Roles)
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        @role
                                    </span>
                                }
                            </div>
                        }
                        
                        <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-100">
                            <div class="text-sm">
                                @if (account.IsActive)
                                {
                                    <span class="flex items-center text-green-700 font-medium text-xs">
                                        <i class="bi bi-circle-fill mr-1.5 text-[8px]"></i>
                                        @Localizer["Active"]
                                    </span>
                                }
                                else
                                {
                                    <span class="flex items-center text-gray-500 text-xs">
                                        <i class="bi bi-circle-fill mr-1.5 text-[8px]"></i>
                                        @Localizer["Inactive"]
                                    </span>
                                }
                            </div>
                            
                            @if (!account.IsCurrentAccount && account.IsActive)
                            {
                                <form method="post" action="/api/my/switch-account" class="switch-account-form">
                                    <input type="hidden" name="targetAccountId" value="@account.UserId" />
                                    <button type="button" class="switch-account-btn btn-google-white text-xs px-3 py-1.5 h-auto min-h-[auto]" 
                                            data-account-id="@account.UserId"
                                            data-account-email="@account.Email"
                                            data-confirm-message="@Localizer["ConfirmSwitchAccount"]"
                                            data-error-message="@Localizer["SwitchAccountError"]"
                                            data-failed-message="@Localizer["SwitchAccountFailed"]">
                                        @Localizer["SwitchAccount"]
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="rounded-md bg-blue-50 p-4 border border-blue-100">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="bi bi-info-circle text-blue-500"></i>
                </div>
                <div class="ml-3 flex-1 md:flex md:justify-between">
                    <p class="text-sm text-blue-700">
                        @Localizer["NoLinkedAccountsAvailable"]
                    </p>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/linked-accounts.js" asp-append-version="true"></script>
}
