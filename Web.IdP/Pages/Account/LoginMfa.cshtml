@page
@model Web.IdP.Pages.Account.LoginMfaModel
@using Web.IdP.Services
@using Core.Application
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@inject IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject IViteManifestService ViteService
@inject IBrandingService BrandingService
@{
    ViewData["Title"] = Localizer["TwoStepVerification"];
    Layout = null;
    var currentCulture = HttpContext.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "en-US";
    var productName = await BrandingService.GetProductNameAsync();
}

<!DOCTYPE html>
<html lang="@currentCulture" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @productName</title>
    
    @* Tailwind CSS *@
    @if (ViteService.IsDevelopment)
    {
        <script type="module" vite-src="@@vite/client"></script>
    }
    <link href="@ViteService.GetScriptPath("src/styles/main.css")" rel="stylesheet" />
    <script type="module" vite-src="src/scripts/razor.js"></script>
    
    @* Google Fonts - Roboto for body *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 google-font min-h-screen flex flex-col">
    <div class="google-login-container">
        <div class="google-login-card">
            <div class="google-login-header text-center">
                <div class="flex justify-center mb-4">
                    <div class="google-logo">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                    </div>
                </div>
                <h1 class="text-2xl font-normal text-gray-900 mb-2">@Localizer["TwoStepVerification"]</h1>
                <p class="mt-1 text-sm text-gray-500">@Localizer["EnterAuthenticatorCode"]</p>
            </div>
            
            <div class="google-login-body">
                <form method="post">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="bg-red-50 text-red-700 p-3 rounded text-sm border border-red-200 mb-6" role="alert" data-test-id="mfa-error-summary"></div>
                    }
                    
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" asp-for="RememberMe" />
                    
                    <div class="space-y-4">
                        @if (Model.EmailMfaEnabled)
                        {
                            <!-- Email MFA Section -->
                            <div class="form-group">
                                <label asp-for="Input.EmailCode" class="block text-sm font-medium text-gray-700 mb-2">@Localizer["EmailVerificationCode"]</label>
                                <div class="flex gap-2">
                                    <input asp-for="Input.EmailCode" 
                                           class="input-google text-center text-2xl tracking-widest flex-1" 
                                           placeholder="000000" 
                                           autocomplete="one-time-code"
                                           inputmode="numeric"
                                           pattern="[0-9]*"
                                           maxlength="6"
                                           data-test-id="mfa-email-code" />
                                    <button type="button" 
                                            id="sendEmailCodeBtn"
                                            class="btn-google-outline whitespace-nowrap px-4"
                                            data-test-id="mfa-send-email-code">
                                        @Localizer["SendEmailCode"]
                                    </button>
                                </div>
                                <span asp-validation-for="Input.EmailCode" class="text-red-600 text-xs mt-1 block"></span>
                                <p id="emailCodeSentMsg" class="text-green-600 text-xs mt-1 hidden">@Localizer["EmailCodeSent"]</p>
                            </div>
                            
                            @if (Model.TwoFactorEnabled)
                            {
                                <div class="relative py-2">
                                    <div class="absolute inset-0 flex items-center">
                                        <div class="w-full border-t border-gray-200"></div>
                                    </div>
                                    <div class="relative flex justify-center text-xs uppercase">
                                        <span class="bg-white px-2 text-gray-400">@Localizer["Or"]</span>
                                    </div>
                                </div>
                            }
                        }
                        
                        @if (Model.TwoFactorEnabled)
                        {
                            <!-- TOTP Section -->
                            <div class="form-group">
                                <label asp-for="Input.TotpCode" class="block text-sm font-medium text-gray-700 mb-2">@Localizer["VerificationCode"]</label>
                                <input asp-for="Input.TotpCode" 
                                       class="input-google text-center text-2xl tracking-widest" 
                                       placeholder="000 000" 
                                       autocomplete="one-time-code"
                                       inputmode="numeric"
                                       pattern="[0-9]*"
                                       maxlength="6"
                                       @(Model.EmailMfaEnabled ? "" : "autofocus")
                                       data-test-id="mfa-totp-code" />
                                <span asp-validation-for="Input.TotpCode" class="text-red-600 text-xs mt-1 block" data-test-id="mfa-code-error"></span>
                            </div>
                        }

                        <div class="form-group">
                            @{
                                var hasRecoveryCodeError = !ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("Input.RecoveryCode");
                            }
                            <details class="text-sm" @(hasRecoveryCodeError ? "open" : "")>
                                <summary class="link-google cursor-pointer">@Localizer["UseRecoveryCode"]</summary>
                                <div class="mt-3">
                                    <label asp-for="Input.RecoveryCode" class="block text-sm font-medium text-gray-700 mb-2">@Localizer["RecoveryCode"]</label>
                                    <input asp-for="Input.RecoveryCode" 
                                           class="input-google font-mono" 
                                           placeholder="XXXXX-XXXXX"
                                           data-test-id="mfa-recovery-code" />
                                    <span asp-validation-for="Input.RecoveryCode" class="text-red-600 text-xs mt-1 block"></span>
                                </div>
                            </details>
                        </div>
                    </div>
                    
                    <script>
                        document.getElementById('sendEmailCodeBtn')?.addEventListener('click', async function() {
                            const btn = this;
                            btn.disabled = true;
                            btn.textContent = '...';
                            try {
                                const response = await fetch('@Url.Page("./LoginMfa", "SendEmailCode")', { 
                                    method: 'POST',
                                    headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' }
                                });
                                if (response.ok) {
                                    document.getElementById('emailCodeSentMsg')?.classList.remove('hidden');
                                    setTimeout(() => document.getElementById('emailCodeSentMsg')?.classList.add('hidden'), 5000);
                                }
                            } catch (e) { console.error(e); }
                            finally {
                                btn.disabled = false;
                                btn.textContent = '@Localizer["SendEmailCode"]';
                            }
                        });
                    </script>
                
                    <div class="flex items-center justify-between mt-8">
                        <a asp-page="./Login" class="link-google text-sm font-medium">
                            @Localizer["BackToLogin"]
                        </a>

                        <button type="submit" 
                                class="btn-google-blue ml-4" 
                                data-test-id="mfa-submit">
                            @Localizer["Verify"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <partial name="_GoogleFooter" />
    </div>
</body>
</html>
