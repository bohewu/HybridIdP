@page
@model Web.IdP.Pages.Account.LogoutModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["LogoutTitle"];
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4 text-center">
                    <h2 class="card-title mb-4">@ViewData["Title"]</h2>
                    
                    @if (Model.ShowLogoutPrompt)
                    {
                        <p class="mb-4">@Localizer["LogoutConfirmMessage"]</p>
                        <form method="post">
                            <button type="submit" class="btn btn-danger">@Localizer["YesLogout"]</button>
                            <a asp-page="/Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                        </form>
                    }
                    else
                    {
                        <p class="text-success mb-4">@Localizer["LogoutSuccessMessage"]</p>
                        <a asp-page="/Index" class="btn btn-primary">@Localizer["ReturnHome"]</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
