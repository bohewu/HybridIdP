@page "{userId:guid}"
@model Web.IdP.Pages.Account.SelectRoleModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["SelectRole"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-badge"></i> @Localizer["SelectYourRole"]
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.UserEmail))
                    {
                        <p class="text-muted mb-4">
                            <i class="bi bi-envelope"></i> @Model.UserEmail
                        </p>
                    }

                    <p class="alert alert-info">
                        <i class="bi bi-info-circle"></i> @Localizer["SelectRoleDescription"]
                    </p>

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <input type="hidden" asp-for="UserId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">@Localizer["AvailableRoles"]</label>
                            <div class="list-group">
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <label class="list-group-item list-group-item-action">
                                        <div class="d-flex align-items-center">
                                            <input type="radio" 
                                                   class="form-check-input me-3" 
                                                   name="Input.SelectedRoleId" 
                                                   value="@role.RoleId" 
                                                   id="role_@role.RoleId"
                                                   checked="@(Model.Input.SelectedRoleId == role.RoleId)" />
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    @role.RoleName
                                                    @if (role.RequiresPassword)
                                                    {
                                                        <span class="badge bg-warning text-dark ms-2">
                                                            <i class="bi bi-shield-lock"></i> @Localizer["RequiresPassword"]
                                                        </span>
                                                    }
                                                </h6>
                                                @if (!string.IsNullOrEmpty(role.Description))
                                                {
                                                    <small class="text-muted">@role.Description</small>
                                                }
                                            </div>
                                        </div>
                                    </label>
                                }
                            </div>
                            <span asp-validation-for="Input.SelectedRoleId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> @Localizer["Continue"]
                            </button>
                            <a asp-page="/Account/Login" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["BackToLogin"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center text-muted">
                <small>
                    <i class="bi bi-shield-check"></i> @Localizer["RoleSelectionSecurityNote"]
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
