@page
@model Web.IdP.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Username:</div>
                        <div class="col-sm-8">@Model.UserName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Email:</div>
                        <div class="col-sm-8">
                            @Model.Email
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success ms-2">Verified</span>
                            }
                            else
                            {
                                <span class="badge bg-warning ms-2">Not Verified</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.LinkedPerson != null)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Person Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Full Name:</div>
                            <div class="col-sm-8">@Model.PersonFullName</div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.LinkedPerson.EmployeeId))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Employee ID:</div>
                                <div class="col-sm-8">@Model.LinkedPerson.EmployeeId</div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.LinkedPerson.Department))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Department:</div>
                                <div class="col-sm-8">@Model.LinkedPerson.Department</div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.LinkedPerson.JobTitle))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Job Title:</div>
                                <div class="col-sm-8">@Model.LinkedPerson.JobTitle</div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.IdentityDocumentType))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold">Identity Document:</div>
                                <div class="col-sm-8">
                                    @Model.IdentityDocumentType
                                    @if (Model.IdentityVerified)
                                    {
                                        <span class="badge bg-success ms-2">Verified</span>
                                        @if (Model.IdentityVerifiedAt.HasValue)
                                        {
                                            <small class="text-muted ms-2">(@Model.IdentityVerifiedAt.Value.ToString("yyyy-MM-dd HH:mm"))</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning ms-2">Not Verified</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.ExternalLogins.Any())
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">External Logins</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            @foreach (var login in Model.ExternalLogins)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-link-45deg"></i>
                                    <strong>@login.LoginProvider</strong>
                                    <small class="text-muted">(@login.ProviderDisplayName ?? login.LoginProvider)</small>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>
</div>
