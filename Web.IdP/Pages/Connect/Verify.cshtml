@page "/connect/verify"
@using Microsoft.AspNetCore.Mvc.Localization
@model Web.IdP.Pages.Connect.DeviceModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="d-flex flex-column justify-content-center align-items-center min-vh-100 bg-light font-sans py-5">
    <div class="text-center mb-4">
        <!-- Brand / Header -->
        <h2 class="fw-bold text-dark">
            @Localizer["Header"]
        </h2>
        <p class="text-secondary">
            @Localizer["Instruction"]
        </p>
    </div>

    <div class="card shadow-sm border-0" style="max-width: 400px; width: 100%;">
        <div class="card-body p-4 p-sm-5">
            <form method="post">
                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                         <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                        <div>
                            @Model.ErrorDescription
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.ApplicationName))
                {
                    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
                         <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                        <div>
                            @Localizer["AppRequestAccess", Model.ApplicationName]
                        </div>
                    </div>
                }

                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
                         <i class="bi bi-check-circle-fill me-2 fs-5"></i>
                        <div>
                            @ViewData["SuccessMessage"]
                        </div>
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 text-sm"></div>

                <div class="mb-4">
                    <label asp-for="UserCode" class="form-label fw-bold text-secondary text-uppercase small">
                        @Localizer["UserCodeLabel"]
                    </label>
                    <div class="input-group">
                        @* Explicitly set name="user_code" to match [BindProperty(Name="user_code")] *@
                        <input asp-for="UserCode" 
                               name="user_code"
                               class="form-control form-control-lg text-center font-monospace tracking-wide text-uppercase shadow-none border-secondary-subtle" 
                               style="letter-spacing: 0.2em; font-size: 1.5rem;"
                               placeholder="XXXX-XXXX-XXXX" 
                               maxlength="15"
                               autofocus 
                               autocomplete="off" />
                    </div>
                    <span asp-validation-for="UserCode" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="d-grid gap-2">
                     <button type="submit" class="btn btn-success fw-bold py-2">
                        @Localizer["ContinueButton"]
                    </button>
                </div>
                
                <div class="text-center mt-3">
                    <a href="/" class="text-decoration-none small text-primary fw-bold">
                        @Localizer["CancelLink"]
                    </a>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-4">
        <p class="text-muted small">
            @Localizer["Footer"]
        </p>
    </div>
</div>

@section Scripts {
    <script src="~/js/device-flow.js" asp-append-version="true"></script>
}
