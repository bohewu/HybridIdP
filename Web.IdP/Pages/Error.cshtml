@page
@model ErrorModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ErrorTitle"];
}

<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-8">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="bi bi-x-circle-fill text-red-400 text-3xl"></i>
            </div>
            <div class="ml-3">
                <h1 class="text-2xl font-bold text-red-800">@Localizer["ErrorTitle"].</h1>
                <h2 class="text-lg font-medium text-red-700 mt-1">@Localizer["ErrorOccurred"]</h2>
            </div>
        </div>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="bg-white shadow sm:rounded-lg mb-6">
            <div class="px-4 py-5 sm:p-6">
                <p class="text-gray-700">
                    <strong class="font-medium text-gray-900">@Localizer["RequestId"]</strong> <code class="bg-gray-100 px-1 py-0.5 rounded text-sm font-mono">@Model.RequestId</code>
                </p>
            </div>
        </div>
    }

    <div class="prose max-w-none text-gray-500">
        <h3 class="text-lg font-medium text-gray-900">@Localizer["DevelopmentMode"]</h3>
        <div class="mt-2 space-y-4">
            <p>
                @Html.Raw(Localizer["DevelopmentDescription1"])
            </p>
            <p>
                @Html.Raw(Localizer["DevelopmentDescription2"])
            </p>
        </div>
    </div>
</div>
