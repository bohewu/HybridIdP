@page
@model ErrorModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ErrorTitle"];
}

<h1 class="text-danger">@Localizer["ErrorTitle"].</h1>
<h2 class="text-danger">@Localizer["ErrorOccurred"]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@Localizer["RequestId"]</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@Localizer["DevelopmentMode"]</h3>
<p>
    @Html.Raw(Localizer["DevelopmentDescription1"])
</p>
<p>
    @Html.Raw(Localizer["DevelopmentDescription2"])
</p>
