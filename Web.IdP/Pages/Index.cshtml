@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["HomePage"];
}

<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl md:text-6xl">@Localizer["HomePage"]</h1>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">@Localizer["WelcomeMessage"]</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Authorization Management Card -->
        <a href="/Account/Authorizations" class="group block h-full no-underline hover:no-underline transform transition-all duration-300 hover:-translate-y-1">
            <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden h-full hover:shadow-xl hover:border-blue-100 transition-all duration-300">
                <div class="p-8 flex flex-col items-center text-center h-full">
                    <div class="h-16 w-16 rounded-2xl bg-blue-50 text-blue-600 flex items-center justify-center text-2xl mb-6 group-hover:scale-110 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">@Localizer["AuthorizationManagement"]</h3>
                    <p class="text-gray-500 mb-6 flex-grow">@Localizer["ViewAndRevokeAuthorizations"]</p>
                    <div class="mt-auto">
                        <span class="inline-flex items-center px-4 py-2 border border-blue-600 text-sm font-medium rounded-md text-blue-600 bg-white group-hover:bg-blue-600 group-hover:text-white transition-colors">
                            @Localizer["ViewDetails"] <i class="bi bi-arrow-right ml-2"></i>
                        </span>
                    </div>
                </div>
            </div>
        </a>

        <!-- Linked Accounts Management Card -->
        <a href="/Account/LinkedAccounts" class="group block h-full no-underline hover:no-underline transform transition-all duration-300 hover:-translate-y-1">
            <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden h-full hover:shadow-xl hover:border-green-100 transition-all duration-300">
                <div class="p-8 flex flex-col items-center text-center h-full">
                    <div class="h-16 w-16 rounded-2xl bg-green-50 text-green-600 flex items-center justify-center text-2xl mb-6 group-hover:scale-110 group-hover:bg-green-600 group-hover:text-white transition-all duration-300">
                        <i class="bi bi-person-lines-fill"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-green-600 transition-colors">@Localizer["LinkedAccountsManagement"]</h3>
                    <p class="text-gray-500 mb-6 flex-grow">@Localizer["ManageYourLinkedAccounts"]</p>
                    <div class="mt-auto">
                        <span class="inline-flex items-center px-4 py-2 border border-green-600 text-sm font-medium rounded-md text-green-600 bg-white group-hover:bg-green-600 group-hover:text-white transition-colors">
                            @Localizer["ViewDetails"] <i class="bi bi-arrow-right ml-2"></i>
                        </span>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>
