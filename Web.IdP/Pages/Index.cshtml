@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["HomePage"];
}

<div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
        <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl md:text-6xl mb-4">
            <span class="block">@Localizer["HomePage"]</span>
        </h1>
        <p class="max-w-2xl mx-auto text-xl text-gray-500">
            @Localizer["WelcomeMessage"]
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Authorization Management Card -->
        <a href="/Account/Authorizations" class="group relative bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden flex flex-col h-full transform hover:-translate-y-1">
            <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-full opacity-10 group-hover:scale-150 transition-transform duration-500"></div>
            
            <div class="p-8 flex-1 flex flex-col items-start relative z-10">
                <div class="w-14 h-14 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center text-2xl mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors duration-300 shadow-sm">
                    <i class="bi bi-shield-check"></i>
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                    @Localizer["AuthorizationManagement"]
                </h3>
                
                <p class="text-gray-500 mb-6 text-sm leading-relaxed">
                    @Localizer["ViewAndRevokeAuthorizations"]
                </p>
                
                <div class="mt-auto flex items-center text-sm font-medium text-blue-600 group-hover:translate-x-1 transition-transform">
                    @Localizer["ViewDetails"] 
                    <i class="bi bi-arrow-right ml-2"></i>
                </div>
            </div>
            
            <div class="h-1 w-full bg-gradient-to-r from-blue-500 to-cyan-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </a>

        <!-- Linked Accounts Management Card -->
        <a href="/Account/LinkedAccounts" class="group relative bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden flex flex-col h-full transform hover:-translate-y-1">
             <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-gradient-to-br from-emerald-500 to-teal-400 rounded-full opacity-10 group-hover:scale-150 transition-transform duration-500"></div>

            <div class="p-8 flex-1 flex flex-col items-start relative z-10">
                 <div class="w-14 h-14 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center text-2xl mb-6 group-hover:bg-emerald-600 group-hover:text-white transition-colors duration-300 shadow-sm">
                    <i class="bi bi-person-lines-fill"></i>
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-emerald-600 transition-colors">
                    @Localizer["LinkedAccountsManagement"]
                </h3>
                
                <p class="text-gray-500 mb-6 text-sm leading-relaxed">
                    @Localizer["ManageYourLinkedAccounts"]
                </p>
                
                <div class="mt-auto flex items-center text-sm font-medium text-emerald-600 group-hover:translate-x-1 transition-transform">
                    @Localizer["ViewDetails"] 
                    <i class="bi bi-arrow-right ml-2"></i>
                </div>
            </div>
            
             <div class="h-1 w-full bg-gradient-to-r from-emerald-500 to-teal-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </a>

        <!-- Profile Management Card (New) -->
        <a href="/Account/Profile" class="group relative bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden flex flex-col h-full transform hover:-translate-y-1">
             <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-gradient-to-br from-violet-500 to-purple-400 rounded-full opacity-10 group-hover:scale-150 transition-transform duration-500"></div>

            <div class="p-8 flex-1 flex flex-col items-start relative z-10">
                 <div class="w-14 h-14 rounded-xl bg-violet-50 text-violet-600 flex items-center justify-center text-2xl mb-6 group-hover:bg-violet-600 group-hover:text-white transition-colors duration-300 shadow-sm">
                    <i class="bi bi-person-circle"></i>
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-violet-600 transition-colors">
                    @Localizer["Profile"]
                </h3>
                
                <p class="text-gray-500 mb-6 text-sm leading-relaxed">
                    @Localizer["ManageProfile"]
                </p>
                
                <div class="mt-auto flex items-center text-sm font-medium text-violet-600 group-hover:translate-x-1 transition-transform">
                    @Localizer["ViewDetails"] 
                    <i class="bi bi-arrow-right ml-2"></i>
                </div>
            </div>
            
             <div class="h-1 w-full bg-gradient-to-r from-violet-500 to-purple-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </a>
    </div>
</div>
