@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["HomePage"];
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-5 fw-bold">@Localizer["HomePage"]</h1>
            <p class="lead text-muted">@Localizer["WelcomeMessage"]</p>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Authorization Management Card -->
        <div class="col-12 col-md-6 col-lg-5">
            <a href="/Account/Authorizations" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-card border-0">
                    <div class="card-body d-flex flex-column align-items-center text-center p-5">
                        <div class="icon-container mb-4" style="width: 80px; height: 80px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-shield-check text-white" style="font-size: 2.5rem;"></i>
                        </div>
                        <h3 class="card-title h4 mb-3">@Localizer["AuthorizationManagement"]</h3>
                        <p class="card-text text-muted mb-4">@Localizer["ViewAndRevokeAuthorizations"]</p>
                        <div class="mt-auto">
                            <span class="btn btn-outline-primary">
                                @Localizer["ViewDetails"] <i class="bi bi-arrow-right ms-2"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Linked Accounts Management Card -->
        <div class="col-12 col-md-6 col-lg-5">
            <a href="/Account/LinkedAccounts" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-card border-0">
                    <div class="card-body d-flex flex-column align-items-center text-center p-5">
                        <div class="icon-container mb-4" style="width: 80px; height: 80px; background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-person-lines-fill text-white" style="font-size: 2.5rem;"></i>
                        </div>
                        <h3 class="card-title h4 mb-3">@Localizer["LinkedAccountsManagement"]</h3>
                        <p class="card-text text-muted mb-4">@Localizer["ManageYourLinkedAccounts"]</p>
                        <div class="mt-auto">
                            <span class="btn btn-outline-success">
                                @Localizer["ViewDetails"] <i class="bi bi-arrow-right ms-2"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
    }
    
    .hover-card .card-body {
        min-height: 350px;
    }
    
    .hover-card .icon-container {
        transition: transform 0.3s ease;
    }
    
    .hover-card:hover .icon-container {
        transform: scale(1.1);
    }
    
    @@media (max-width: 768px) {
        .hover-card .card-body {
            min-height: auto;
            padding: 2rem 1.5rem !important;
        }
        
        .icon-container {
            width: 64px !important;
            height: 64px !important;
        }
        
        .icon-container i {
            font-size: 2rem !important;
        }
    }
</style>
