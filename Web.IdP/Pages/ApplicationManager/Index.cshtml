@page
@model Web.IdP.Pages.ApplicationManager.IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_ApplicationManagerLayout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900">@Localizer["Welcome"], @Model.UserName</h2>
        <p class="mt-1 text-sm text-gray-500">@Localizer["ManageYourApplicationsAndScopes"]</p>
    </div>

    @* Summary Cards *@
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Clients Card -->
        <div class="bg-white overflow-hidden rounded-lg shadow-sm border border-gray-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-full bg-blue-50 p-3">
                            <i class="bi bi-pc-display text-blue-600 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">@Localizer["MyClients"]</dt>
                            <dd>
                                <div class="text-lg font-bold text-gray-900">@Model.ClientCount</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="/Admin/Clients" class="text-sm font-medium text-blue-700 hover:text-blue-900 flex items-center justify-center">
                    @Localizer["ManageClients"] <i class="bi bi-arrow-right-circle ml-2"></i>
                </a>
            </div>
        </div>

        <!-- Scopes Card -->
        <div class="bg-white overflow-hidden rounded-lg shadow-sm border border-gray-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-full bg-green-50 p-3">
                            <i class="bi bi-shield-lock text-green-600 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">@Localizer["MyScopes"]</dt>
                            <dd>
                                <div class="text-lg font-bold text-gray-900">@Model.ScopeCount</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="/Admin/Scopes" class="text-sm font-medium text-green-700 hover:text-green-900 flex items-center justify-center">
                    @Localizer["ManageScopes"] <i class="bi bi-arrow-right-circle ml-2"></i>
                </a>
            </div>
        </div>

        <!-- Documentation Card -->
        <div class="bg-white overflow-hidden rounded-lg shadow-sm border border-gray-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-full bg-cyan-50 p-3">
                            <i class="bi bi-info-circle text-cyan-600 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">@Localizer["Documentation"]</dt>
                            <dd>
                                <div class="text-lg font-bold text-gray-900">@Localizer["QuickStart"]</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="/ApplicationManager/Docs/Quickstart" class="text-sm font-medium text-cyan-700 hover:text-cyan-900 flex items-center justify-center">
                    @Localizer["ViewGuide"] <i class="bi bi-book ml-2"></i>
                </a>
            </div>
        </div>
    </div>

    @* Quick Actions *@
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 mb-8">
        <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
                <i class="bi bi-lightning mr-2"></i> @Localizer["QuickActions"]
            </h3>
        </div>
        <div class="p-4 sm:p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <a href="/Admin/Clients" class="flex items-center justify-center px-4 py-2 border border-blue-600 rounded-md shadow-sm text-sm font-medium text-blue-600 bg-white hover:bg-blue-50 transition-colors">
                    <i class="bi bi-plus-circle mr-2"></i> @Localizer["CreateClient"]
                </a>
                <a href="/Admin/Scopes" class="flex items-center justify-center px-4 py-2 border border-green-600 rounded-md shadow-sm text-sm font-medium text-green-600 bg-white hover:bg-green-50 transition-colors">
                    <i class="bi bi-plus-circle mr-2"></i> @Localizer["CreateScope"]
                </a>
                <a href="/Admin/Clients" class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                    <i class="bi bi-list-ul mr-2"></i> @Localizer["ViewAllClients"]
                </a>
                <a href="/Admin/Scopes" class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                    <i class="bi bi-list-ul mr-2"></i> @Localizer["ViewAllScopes"]
                </a>
            </div>
        </div>
    </div>

    @* Getting Started Guide *@
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
        <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
                <i class="bi bi-compass mr-2"></i> @Localizer["GettingStarted"]
            </h3>
        </div>
        <div class="p-4 sm:p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <span class="flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600 font-bold ring-4 ring-white">1</span>
                    </div>
                    <div class="ml-4">
                        <h4 class="text-base font-bold text-gray-900">@Localizer["CreateClient"]</h4>
                        <p class="mt-1 text-sm text-gray-500">@Localizer["CreateClientDescription"]</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="flex-shrink-0">
                        <span class="flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600 font-bold ring-4 ring-white">2</span>
                    </div>
                    <div class="ml-4">
                        <h4 class="text-base font-bold text-gray-900">@Localizer["ConfigureScopes"]</h4>
                        <p class="mt-1 text-sm text-gray-500">@Localizer["ConfigureScopesDescription"]</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="flex-shrink-0">
                        <span class="flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600 font-bold ring-4 ring-white">3</span>
                    </div>
                    <div class="ml-4">
                        <h4 class="text-base font-bold text-gray-900">@Localizer["IntegrateApplication"]</h4>
                        <p class="mt-1 text-sm text-gray-500">@Localizer["IntegrateApplicationDescription"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
