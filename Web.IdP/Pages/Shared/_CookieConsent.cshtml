@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Web.IdP.SharedResource> Localizer

@* Cookie consent banner - Google style *@
<div id="cookie-consent-template" style="display:none">
  <div id="cookie-consent-banner" role="dialog" aria-live="polite" aria-label="@Localizer["CookieConsent.AriaLabel"]">
    <div>
      <strong class="text-gray-900">@Localizer["CookieConsent.Title"]</strong>
      <p class="text-sm text-gray-600 mt-2 mb-0">@Localizer["CookieConsent.Description"]</p>
      <div class="cc-actions">
        <button id="cookie-consent-decline" class="btn-google-white">@Localizer["CookieConsent.Decline"]</button>
        <button id="cookie-consent-accept" class="btn-google-blue">@Localizer["CookieConsent.Accept"]</button>
      </div>
      <div class="mt-3">
        <a href="/Privacy" class="text-sm link-google">@Localizer["Privacy"]</a>
      </div>
    </div>
  </div>
</div>
<link rel="stylesheet" href="~/css/cookie-consent.css" asp-append-version="true" />
<script src="~/js/cookie-consent.js" asp-append-version="true"></script>
