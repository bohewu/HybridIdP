@using Core.Domain
@using Core.Domain.Constants
@using Microsoft.AspNetCore.Identity
@using Web.IdP.Helpers
@using Core.Application
@using Web.IdP.Services
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<ApplicationRole> RoleManager
@inject IBrandingService BrandingService
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject IViteManifestService ViteService

@{
    // Get user permissions once for the entire layout
    var userPermissions = await PermissionHelper.GetUserPermissionsAsync(UserManager, RoleManager, User);
    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    var appName = await BrandingService.GetAppNameAsync();
    var productName = await BrandingService.GetProductNameAsync();
}

<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <meta name="locale" content="@currentCulture" />
    <title>@ViewData["Title"] - @productName @Localizer["AdminPortal"]</title>
    
    @* Tailwind CSS *@
    @if (ViteService.IsDevelopment)
    {
        <script type="module" vite-src="@@vite/client"></script>
    }
    <link href="@ViteService.GetScriptPath("src/styles/main.css")" rel="stylesheet" />
    <script type="module" vite-src="src/scripts/razor.js"></script>
    
    @* Google Fonts - Roboto *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body class="admin-layout bg-gray-50 google-font">
    @* Vue Loading Bar - auto-hides when Vue apps are mounted *@
    <div id="vue-loading-bar" class="vue-loading-bar"></div>
    @if (User.Identity is System.Security.Claims.ClaimsIdentity claimsIdentity && claimsIdentity.Actor != null)
    {
        <div class="impersonation-banner bg-yellow-400 text-gray-900 text-center py-2 font-bold sticky top-0 z-50 shadow-sm flex items-center justify-center">
            <i class="bi bi-eye-fill me-2"></i>
            @string.Format(Localizer["ImpersonatingUser"], User.Identity.Name)
            <button onclick="revertImpersonation()" class="inline-flex items-center justify-center px-3 py-1 ml-3 border border-transparent text-sm font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900">
                <i class="bi bi-arrow-return-left mr-1"></i> @Localizer["StopImpersonation"]
            </button>
        </div>
    }
    
    @* Sidebar *@
    <div class="sidebar bg-white border-r border-gray-200">
        <div class="sidebar-sticky flex flex-col h-screen overflow-y-auto">
            @* Logo *@
            <a href="/Admin" class="sidebar-brand flex items-center gap-3 p-6 border-b border-gray-200 no-underline hover:no-underline">
                <div class="sidebar-brand-icon flex items-center justify-center w-10 h-10 rounded-lg text-white text-xl bg-gradient-to-br from-blue-500 to-purple-600">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1 class="text-lg font-bold text-gray-900 m-0 leading-tight">@appName</h1>
                    <p class="text-xs text-gray-500 m-0">@Localizer["AdminPortal"]</p>
                </div>
            </a>
            
            @* Navigation *@
            <nav class="sidebar-nav flex-grow py-4">
                @* Dashboard - always visible *@
                <a href="/Admin" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Index" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                    <i class="bi bi-house-door text-lg"></i>
                    <span>@Localizer["Dashboard"]</span>
                </a>
                
                @* OIDC Management *@
                @if (userPermissions.HasAnyPermission(Permissions.Clients.Read, Permissions.Scopes.Read, Permissions.Claims.Read))
                {
                    <div class="nav-section-title px-4 py-2 mt-4 text-xs font-semibold text-gray-400 uppercase tracking-wider">@Localizer["OidcManagement"]</div>
                }
                @if (userPermissions.HasPermission(Permissions.Clients.Read))
                {
                    <a href="/Admin/Clients" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Clients" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-pc-display text-lg"></i>
                        <span>@Localizer["Clients"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Scopes.Read))
                {
                    <a href="/Admin/Scopes" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Scopes" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-shield-lock text-lg"></i>
                        <span>@Localizer["Scopes"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Scopes.Read))
                {
                    <a href="/Admin/Resources" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Resources" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-boxes text-lg"></i>
                        <span>@Localizer["Resources"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Claims.Read))
                {
                    <a href="/Admin/Claims" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Claims" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-card-list text-lg"></i>
                        <span>@Localizer["Claims"]</span>
                    </a>
                }
                
                @* Identity Management *@
                @if (userPermissions.HasAnyPermission(Permissions.Users.Read, Permissions.Roles.Read, Permissions.Persons.Read))
                {
                    <div class="nav-section-title px-4 py-2 mt-4 text-xs font-semibold text-gray-400 uppercase tracking-wider">@Localizer["IdentityManagement"]</div>
                }
                @if (userPermissions.HasPermission(Permissions.Persons.Read))
                {
                    <a href="/Admin/People" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/People" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-person-vcard text-lg"></i>
                        <span>@Localizer["Persons"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Users.Read))
                {
                    <a href="/Admin/Users" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Users" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-people text-lg"></i>
                        <span>@Localizer["Users"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Roles.Read))
                {
                    <a href="/Admin/Roles" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Roles" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-award text-lg"></i>
                        <span>@Localizer["Roles"]</span>
                    </a>
                }
               
                
                @* Settings *@
                @if (userPermissions.HasPermission(Permissions.Settings.Read))
                {
                    <div class="nav-section-title px-4 py-2 mt-4 text-xs font-semibold text-gray-400 uppercase tracking-wider">@Localizer["Settings"]</div>
                    <a href="/Admin/Settings" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Settings" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-gear text-lg"></i>
                        <span>@Localizer["Settings"]</span>
                    </a>
                    <a href="/Admin/SecurityPolicies" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/SecurityPolicies" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                        <i class="bi bi-lock text-lg"></i>
                        <span>@Localizer["SecurityPolicies"]</span>
                    </a>
                    @if (userPermissions.HasPermission(Permissions.Localization.Read))
                    {
                        <a href="/Admin/Localization" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Localization" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                            <i class="bi bi-translate text-lg"></i>
                            <span>@Localizer["Localization"]</span>
                        </a>
                    }
                    @if (userPermissions.HasPermission(Permissions.Audit.Read))
                    {
                        <a href="/Admin/Audit" class="nav-link flex items-center gap-3 px-4 py-3 font-medium text-gray-600 border-l-4 border-transparent hover:bg-gray-50 hover:text-blue-600 transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Audit" ? "active bg-blue-50 text-blue-600 border-blue-600" : "")">
                            <i class="bi bi-journal-text text-lg"></i>
                            <span>@Localizer["Audit"]</span>
                        </a>
                    }
                }
            </nav>
            
            @* User Profile *@
            <div class="sidebar-user mt-auto p-4 border-t border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <div class="user-avatar flex items-center justify-center w-10 h-10 rounded-full text-white font-medium text-sm bg-blue-600">
                            @((User?.Identity?.Name ?? User?.FindFirst("preferred_username")?.Value ?? "AD").Substring(0, Math.Min(2, (User?.Identity?.Name ?? User?.FindFirst("preferred_username")?.Value ?? "AD").Length)).ToUpper())
                        </div>
                        <div class="min-w-0 flex-1">
                            <div class="font-medium text-sm text-gray-900 truncate">@(User?.FindFirst("preferred_username")?.Value ?? User?.Identity?.Name)</div>
                            <div class="text-xs text-gray-500">@Localizer["Administrator"]</div>
                        </div>
                    </div>
                    <a href="/Account/Logout" class="text-gray-400 hover:text-gray-600" title="Logout">
                        <i class="bi bi-box-arrow-right text-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Main Content Area *@
    <div class="main-content flex flex-col min-h-screen transition-all duration-300">
        @* Header *@
        <header class="top-header sticky top-0 z-30 bg-white border-b border-gray-200 px-6 py-3">
            <div class="flex items-center justify-between h-full">
                @* Mobile Menu Toggle *@
                <button class="md:hidden p-1 text-gray-600 hover:text-gray-900 focus:outline-none" id="sidebar-toggle">
                    <i class="bi bi-list text-2xl"></i>
                </button>
                
                @* Breadcrumbs *@
                <nav aria-label="breadcrumb" class="hidden md:block">
                    <ol class="flex items-center space-x-2 text-sm text-gray-500">
                        <li><a href="/Admin" class="text-gray-500 hover:text-blue-600 no-underline">@Localizer["Admin"]</a></li>
                        @if (!string.IsNullOrEmpty(ViewData["Breadcrumb"]?.ToString()))
                        {
                            <li><span class="text-gray-300">/</span></li>
                            <li class="font-medium text-gray-900" aria-current="page">@ViewData["Breadcrumb"]</li>
                        }
                    </ol>
                </nav>
                
                @* Right Side *@
                <div class="flex items-center gap-4">
                    <a href="/" class="hidden sm:inline-flex items-center gap-1 px-3 py-1.5 border border-blue-600 text-blue-600 rounded-md text-sm font-medium hover:bg-blue-50 transition-colors no-underline" title="@Localizer["BackToHome"]">
                      <svg class="icon icon-tabler icon-tabler-home" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                        <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                        <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                      </svg>
                      <span>@Localizer["BackToHome"]</span>
                    </a>
                    <a href="/" class="sm:hidden text-blue-600 hover:text-blue-700" title="@Localizer["BackToHome"]">
                        <svg class="icon icon-tabler icon-tabler-home" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                        </svg>
                    </a>
                    <div class="w-32">
                        <partial name="_LanguageSelector" />
                    </div>
                </div>
            </div>
        </header>
        
        @* Scrollable Content Wrapper *@
        <div class="content-scroll-wrapper flex-grow flex flex-col pt-[65px] h-[calc(100vh-65px)] overflow-y-auto">
            @* Main Content *@
            <main class="flex-grow p-6 w-full max-w-full">
                @RenderBody()
            </main>
            
            @* Footer *@
            <footer class="admin-footer px-6 py-4 bg-white border-t border-gray-200 mt-auto">
                <div class="flex flex-col md:flex-row justify-between items-center text-gray-500 text-xs gap-2 md:gap-0">
                    <p class="m-0">Â© @DateTime.Now.Year @productName. @Localizer["AllRightsReserved"]</p>
                    <div class="flex gap-4">
                        <a href="/Privacy" class="text-gray-500 hover:text-gray-700 no-underline">@Localizer["Privacy"]</a>
                        <a href="/Admin/Docs/Quickstart" target="_blank" class="text-gray-500 hover:text-gray-700 no-underline">@Localizer["Documentation"]</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    @* Mobile Overlay *@
    <div class="mobile-overlay fixed inset-0 bg-black/50 z-35 hidden transition-opacity" id="mobile-overlay"></div>
    
    @* Page-specific scripts (e.g., Vue.js bundles) *@
    @RenderSection("Scripts", required: false)
    <partial name="_CookieConsent" />
</body>
</html>
