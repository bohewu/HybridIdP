<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HybridAuth IdP Admin</title>
    
    @* Bootstrap 5 CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        /* Admin Layout Custom Styles */
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        
        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 0;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            background-color: #fff;
            width: 260px;
        }
        
        .sidebar-sticky {
            position: sticky;
            top: 0;
            height: calc(100vh);
            overflow-x: hidden;
            overflow-y: auto;
        }
        
        /* Logo Section */
        .sidebar-brand {
            padding: 1.5rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
        }
        
        .sidebar-brand-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
        }
        
        .sidebar-brand-text h1 {
            margin: 0;
            font-size: 1.125rem;
            font-weight: 700;
            color: #212529;
        }
        
        .sidebar-brand-text p {
            margin: 0;
            font-size: 0.75rem;
            color: #6c757d;
        }
        
        /* Navigation */
        .sidebar-nav {
            padding: 1rem 0;
        }
        
        .nav-section-title {
            padding: 1rem 1rem 0.5rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: #6c757d;
            letter-spacing: 0.05em;
        }
        
        .sidebar .nav-link {
            padding: 0.75rem 1rem;
            color: #495057;
            font-weight: 500;
            border-left: 3px solid transparent;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .sidebar .nav-link:hover {
            background-color: #f8f9fa;
            color: #667eea;
        }
        
        .sidebar .nav-link.active {
            background-color: #e7e9fc;
            color: #667eea;
            border-left-color: #667eea;
        }
        
        .sidebar .nav-link i {
            font-size: 1.125rem;
            width: 1.25rem;
            text-align: center;
        }
        
        .badge-phase {
            font-size: 0.625rem;
            padding: 0.25rem 0.5rem;
        }
        
        /* User Section */
        .sidebar-user {
            padding: 1rem;
            border-top: 1px solid #dee2e6;
            margin-top: auto;
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 0.875rem;
        }
        
        /* Main Content */
        .main-content {
            margin-left: 260px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        /* Header */
        .top-header {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 99;
        }
        
        .breadcrumb {
            margin-bottom: 0;
            background-color: transparent;
            padding: 0;
        }
        
        /* Footer */
        .admin-footer {
            margin-top: auto;
            padding: 1.5rem;
            background-color: #fff;
            border-top: 1px solid #dee2e6;
        }
        
        /* Mobile Responsive */
        @@media (max-width: 767.98px) {
            .sidebar {
                margin-left: -260px;
                transition: margin 0.3s ease-in-out;
            }
            
            .sidebar.show {
                margin-left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .mobile-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 99;
            }
            
            .mobile-overlay.show {
                display: block;
            }
        }
    </style>
</head>
<body>
    @* Sidebar *@
    <div class="sidebar">
        <div class="sidebar-sticky d-flex flex-column">
            @* Logo *@
            <a href="/Admin" class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1>HybridAuth</h1>
                    <p>Admin Portal</p>
                </div>
            </a>
            
            @* Navigation *@
            <nav class="sidebar-nav flex-grow-1">
                @* Dashboard *@
                <a href="/Admin" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Index" ? "active" : "")">
                    <i class="bi bi-house-door"></i>
                    <span>Dashboard</span>
                </a>
                
                @* OIDC Management *@
                <div class="nav-section-title">OIDC Management</div>
                <a href="/Admin/Clients" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Clients" ? "active" : "")">
                    <i class="bi bi-pc-display"></i>
                    <span>Clients</span>
                </a>
                <a href="/Admin/Scopes" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Scopes" ? "active" : "")">
                    <i class="bi bi-shield-lock"></i>
                    <span>Scopes</span>
                </a>
                
                @* Identity Management *@
                <div class="nav-section-title">Identity Management</div>
                <a href="/Admin/Users" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Users" ? "active" : "")">
                    <i class="bi bi-people"></i>
                    <span>Users</span>
                    <span class="badge bg-secondary badge-phase ms-auto">Phase 4</span>
                </a>
                <a href="/Admin/Roles" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Roles" ? "active" : "")">
                    <i class="bi bi-award"></i>
                    <span>Roles</span>
                    <span class="badge bg-secondary badge-phase ms-auto">Phase 4</span>
                </a>
                
                @* Settings *@
                <div class="nav-section-title">Settings</div>
                <a href="/Admin/SecurityPolicies" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/SecurityPolicies" ? "active" : "")">
                    <i class="bi bi-lock"></i>
                    <span>Security Policies</span>
                    <span class="badge bg-secondary badge-phase ms-auto">Phase 5</span>
                </a>
            </nav>
            
            @* User Profile *@
            <div class="sidebar-user">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <div class="user-avatar">
                            @(User.Identity?.Name?.Substring(0, 2).ToUpper() ?? "AD")
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-medium small text-truncate" style="max-width: 120px;">@User.Identity?.Name</div>
                            <div class="text-muted" style="font-size: 0.75rem;">Administrator</div>
                        </div>
                    </div>
                    <a href="/Account/Logout" class="text-muted" title="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Main Content Area *@
    <div class="main-content">
        @* Header *@
        <header class="top-header">
            <div class="d-flex align-items-center justify-content-between">
                @* Mobile Menu Toggle *@
                <button class="btn btn-link d-md-none p-0 text-dark" id="sidebar-toggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                
                @* Breadcrumbs *@
                <nav aria-label="breadcrumb" class="d-none d-md-block">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin" class="text-decoration-none">Admin</a></li>
                        @if (!string.IsNullOrEmpty(ViewData["Breadcrumb"]?.ToString()))
                        {
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Breadcrumb"]</li>
                        }
                    </ol>
                </nav>
                
                @* Right Side *@
                <div>
                    <span class="text-muted small">Welcome back!</span>
                </div>
            </div>
        </header>
        
        @* Main Content *@
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
        
        @* Footer *@
        <footer class="admin-footer">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center text-muted small">
                <p class="mb-2 mb-md-0">Â© @DateTime.Now.Year HybridAuth IdP. All rights reserved.</p>
                <div class="d-flex gap-3">
                    <a href="/Privacy" class="text-decoration-none text-muted">Privacy Policy</a>
                    <span>|</span>
                    <a href="#" class="text-decoration-none text-muted">Documentation</a>
                    <span>|</span>
                    <a href="#" class="text-decoration-none text-muted">Support</a>
                </div>
            </div>
        </footer>
    </div>
    
    @* Mobile Overlay *@
    <div class="mobile-overlay" id="mobile-overlay"></div>
    
    @* Bootstrap 5 JS *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @* Mobile Menu Script *@
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('mobile-overlay');
            const toggleBtn = document.getElementById('sidebar-toggle');
            
            if (toggleBtn) {
                toggleBtn.addEventListener('click', function() {
                    sidebar.classList.add('show');
                    overlay.classList.add('show');
                });
            }
            
            if (overlay) {
                overlay.addEventListener('click', function() {
                    sidebar.classList.remove('show');
                    overlay.classList.remove('show');
                });
            }
        });
    </script>
    
    @* Page-specific scripts (e.g., Vue.js bundles) *@
    @RenderSection("Scripts", required: false)
</body>
</html>
