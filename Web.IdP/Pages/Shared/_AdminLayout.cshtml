<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HybridAuth IdP Admin</title>
    
    @* Bootstrap 5 CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    @* Admin Layout Custom Styles *@
    <link href="~/css/admin-layout.css" rel="stylesheet" asp-append-version="true">
</head>
<body>
    @* Sidebar *@
    <div class="sidebar">
        <div class="sidebar-sticky d-flex flex-column">
            @* Logo *@
            <a href="/Admin" class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1>HybridAuth</h1>
                    <p>Admin Portal</p>
                </div>
            </a>
            
            @* Navigation *@
            <nav class="sidebar-nav flex-grow-1" id="admin-nav">
                @* Dashboard - always visible *@
                <a href="/Admin" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Index" ? "active" : "")">
                    <i class="bi bi-house-door"></i>
                    <span>Dashboard</span>
                </a>
                
                @* OIDC Management *@
                <div class="nav-section-title" data-section="oidc">OIDC Management</div>
                <a href="/Admin/Clients" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Clients" ? "active" : "")" data-permission="clients.read">
                    <i class="bi bi-pc-display"></i>
                    <span>Clients</span>
                </a>
                <a href="/Admin/Scopes" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Scopes" ? "active" : "")" data-permission="scopes.read">
                    <i class="bi bi-shield-lock"></i>
                    <span>Scopes</span>
                </a>
                <a href="/Admin/Claims" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Claims" ? "active" : "")" data-permission="claims.read">
                    <i class="bi bi-card-list"></i>
                    <span>Claims</span>
                </a>
                
                @* Identity Management *@
                <div class="nav-section-title" data-section="identity">Identity Management</div>
                <a href="/Admin/Users" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Users" ? "active" : "")" data-permission="users.read">
                    <i class="bi bi-people"></i>
                    <span>Users</span>
                    <span class="badge bg-secondary badge-phase ms-auto">Phase 4</span>
                </a>
                <a href="/Admin/Roles" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Roles" ? "active" : "")" data-permission="roles.read">
                    <i class="bi bi-award"></i>
                    <span>Roles</span>
                    <span class="badge bg-secondary badge-phase ms-auto">Phase 4</span>
                </a>
                
                @* Settings *@
                <div class="nav-section-title" data-section="settings">Settings</div>
                <a href="/Admin/SecurityPolicies" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/SecurityPolicies" ? "active" : "")" data-permission="settings.read">
                    <i class="bi bi-lock"></i>
                    <span>Security Policies</span>
                    <span class="badge bg-secondary badge-phase ms-auto">Phase 5</span>
                </a>
            </nav>
            
            @* User Profile *@
            <div class="sidebar-user">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <div class="user-avatar">
                            @(User.Identity?.Name?.Substring(0, 2).ToUpper() ?? "AD")
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-medium small text-truncate user-info-name">@User.Identity?.Name</div>
                            <div class="text-muted user-info-role">Administrator</div>
                        </div>
                    </div>
                    <a href="/Account/Logout" class="text-muted" title="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Main Content Area *@
    <div class="main-content">
        @* Header *@
        <header class="top-header">
            <div class="d-flex align-items-center justify-content-between">
                @* Mobile Menu Toggle *@
                <button class="btn btn-link d-md-none p-0 text-dark" id="sidebar-toggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                
                @* Breadcrumbs *@
                <nav aria-label="breadcrumb" class="d-none d-md-block">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin" class="text-decoration-none">Admin</a></li>
                        @if (!string.IsNullOrEmpty(ViewData["Breadcrumb"]?.ToString()))
                        {
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Breadcrumb"]</li>
                        }
                    </ol>
                </nav>
                
                @* Right Side *@
                <div>
                    <span class="text-muted small">Welcome back!</span>
                </div>
            </div>
        </header>
        
        @* Main Content *@
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
        
        @* Footer *@
        <footer class="admin-footer">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center text-muted small">
                <p class="mb-2 mb-md-0">Â© @DateTime.Now.Year HybridAuth IdP. All rights reserved.</p>
                <div class="d-flex gap-3">
                    <a href="/Privacy" class="text-decoration-none text-muted">Privacy Policy</a>
                    <span>|</span>
                    <a href="#" class="text-decoration-none text-muted">Documentation</a>
                    <span>|</span>
                    <a href="#" class="text-decoration-none text-muted">Support</a>
                </div>
            </div>
        </footer>
    </div>
    
    @* Mobile Overlay *@
    <div class="mobile-overlay" id="mobile-overlay"></div>
    
    @* Bootstrap 5 JS *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @* Admin Layout Mobile Menu Script *@
    <script src="~/js/admin-layout.js" asp-append-version="true"></script>
    
    @* Permission-based Menu Filtering *@
    <script>
        (async function() {
            try {
                // Fetch user permissions from API
                const response = await fetch('/api/admin/permissions/current');
                if (!response.ok) {
                    console.warn('Failed to load permissions, showing all menu items');
                    return;
                }
                
                const data = await response.json();
                const permissions = data.permissions || [];
                
                // Hide menu items user doesn't have permission for
                const nav = document.getElementById('admin-nav');
                const menuItems = nav.querySelectorAll('a[data-permission]');
                
                menuItems.forEach(item => {
                    const requiredPermission = item.getAttribute('data-permission');
                    if (!permissions.includes(requiredPermission)) {
                        item.style.display = 'none';
                    }
                });
                
                // Hide section headers if all items in that section are hidden
                const sections = {
                    'oidc': ['clients.read', 'scopes.read', 'claims.read'],
                    'identity': ['users.read', 'roles.read'],
                    'settings': ['settings.read']
                };
                
                Object.keys(sections).forEach(sectionKey => {
                    const sectionPermissions = sections[sectionKey];
                    const hasAnyPermission = sectionPermissions.some(p => permissions.includes(p));
                    
                    if (!hasAnyPermission) {
                        const sectionHeader = nav.querySelector(`[data-section="${sectionKey}"]`);
                        if (sectionHeader) {
                            sectionHeader.style.display = 'none';
                        }
                    }
                });
            } catch (error) {
                console.error('Error loading permissions:', error);
            }
        })();
    </script>
    
    @* Page-specific scripts (e.g., Vue.js bundles) *@
    @RenderSection("Scripts", required: false)
</body>
</html>
