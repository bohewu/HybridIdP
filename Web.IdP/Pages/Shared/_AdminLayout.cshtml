@using Core.Domain
@using Core.Domain.Constants
@using Microsoft.AspNetCore.Identity
@using Web.IdP.Helpers
@using Core.Application
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<ApplicationRole> RoleManager
@inject IBrandingService BrandingService
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer

@{
    // Get user permissions once for the entire layout
    var userPermissions = await PermissionHelper.GetUserPermissionsAsync(UserManager, RoleManager, User);
    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    var appName = await BrandingService.GetAppNameAsync();
    var productName = await BrandingService.GetProductNameAsync();
}

<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <meta name="locale" content="@currentCulture" />
    <title>@ViewData["Title"] - @productName @Localizer["AdminPortal"]</title>
    
    @* Bootstrap 5 CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    @* Admin Layout Custom Styles (includes Vue loading bar) *@
    <link href="~/css/admin-layout.css" rel="stylesheet" asp-append-version="true">
</head>
<body class="admin-layout">
    @* Vue Loading Bar - auto-hides when Vue apps are mounted *@
    <div id="vue-loading-bar" class="vue-loading-bar"></div>
    @if (User.Identity is System.Security.Claims.ClaimsIdentity claimsIdentity && claimsIdentity.Actor != null)
    {
        <div class="impersonation-banner bg-warning text-dark text-center py-2 fw-bold" style="position: sticky; top: 0; z-index: 1050;">
            <i class="bi bi-eye-fill me-2"></i>
            @string.Format(Localizer["ImpersonatingUser"], User.Identity.Name)
            <button onclick="revertImpersonation()" class="btn btn-sm btn-dark ms-3">
                <i class="bi bi-arrow-return-left me-1"></i> @Localizer["StopImpersonation"]
            </button>
        </div>
        <script>
            async function revertImpersonation() {
                try {
                    const response = await fetch('/api/admin/users/stop-impersonation', { method: 'POST' });
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        const data = await response.json();
                        alert(data.error || 'Failed to stop impersonation');
                    }
                } catch (error) {
                    console.error('Error reverting impersonation:', error);
                    alert('An error occurred');
                }
            }
        </script>
    }
    @* Sidebar *@
    <div class="sidebar">
        <div class="sidebar-sticky d-flex flex-column">
            @* Logo *@
            <a href="/Admin" class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1>@appName</h1>
                    <p>@Localizer["AdminPortal"]</p>
                </div>
            </a>
            
            @* Navigation *@
            <nav class="sidebar-nav flex-grow-1">
                @* Dashboard - always visible *@
                <a href="/Admin" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Index" ? "active" : "")">
                    <i class="bi bi-house-door"></i>
                    <span>@Localizer["Dashboard"]</span>
                </a>
                
                @* OIDC Management *@
                @if (userPermissions.HasAnyPermission(Permissions.Clients.Read, Permissions.Scopes.Read, Permissions.Claims.Read))
                {
                    <div class="nav-section-title">@Localizer["OidcManagement"]</div>
                }
                @if (userPermissions.HasPermission(Permissions.Clients.Read))
                {
                    <a href="/Admin/Clients" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Clients" ? "active" : "")">
                        <i class="bi bi-pc-display"></i>
                        <span>@Localizer["Clients"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Scopes.Read))
                {
                    <a href="/Admin/Scopes" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Scopes" ? "active" : "")">
                        <i class="bi bi-shield-lock"></i>
                        <span>@Localizer["Scopes"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Scopes.Read))
                {
                    <a href="/Admin/Resources" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Resources" ? "active" : "")">
                        <i class="bi bi-boxes"></i>
                        <span>@Localizer["Resources"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Claims.Read))
                {
                    <a href="/Admin/Claims" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Claims" ? "active" : "")">
                        <i class="bi bi-card-list"></i>
                        <span>@Localizer["Claims"]</span>
                    </a>
                }
                
                @* Identity Management *@
                @if (userPermissions.HasAnyPermission(Permissions.Users.Read, Permissions.Roles.Read, Permissions.Persons.Read))
                {
                    <div class="nav-section-title">@Localizer["IdentityManagement"]</div>
                }
                @if (userPermissions.HasPermission(Permissions.Persons.Read))
                {
                    <a href="/Admin/People" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/People" ? "active" : "")">
                        <i class="bi bi-person-vcard"></i>
                        <span>@Localizer["Persons"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Users.Read))
                {
                    <a href="/Admin/Users" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Users" ? "active" : "")">
                        <i class="bi bi-people"></i>
                        <span>@Localizer["Users"]</span>
                    </a>
                }
                @if (userPermissions.HasPermission(Permissions.Roles.Read))
                {
                    <a href="/Admin/Roles" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Roles" ? "active" : "")">
                        <i class="bi bi-award"></i>
                        <span>@Localizer["Roles"]</span>
                    </a>
                }
               
                
                @* Settings *@
                @if (userPermissions.HasPermission(Permissions.Settings.Read))
                {
                    <div class="nav-section-title">@Localizer["Settings"]</div>
                    <a href="/Admin/Settings" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Settings" ? "active" : "")">
                        <i class="bi bi-gear"></i>
                        <span>@Localizer["Settings"]</span>
                    </a>
                    <a href="/Admin/SecurityPolicies" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/SecurityPolicies" ? "active" : "")">
                        <i class="bi bi-lock"></i>
                        <span>@Localizer["SecurityPolicies"]</span>
                    </a>
                    @if (userPermissions.HasPermission(Permissions.Localization.Read))
                    {
                        <a href="/Admin/Localization" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Localization" ? "active" : "")">
                            <i class="bi bi-translate"></i>
                            <span>@Localizer["Localization"]</span>
                        </a>
                    }
                    @if (userPermissions.HasPermission(Permissions.Audit.Read))
                    {
                        <a href="/Admin/Audit" class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Audit" ? "active" : "")">
                            <i class="bi bi-journal-text"></i>
                            <span>@Localizer["Audit"]</span>
                        </a>
                    }
                }
            </nav>
            
            @* User Profile *@
            <div class="sidebar-user">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <div class="user-avatar">
                            @((User?.Identity?.Name ?? User?.FindFirst("preferred_username")?.Value ?? "AD").Substring(0, Math.Min(2, (User?.Identity?.Name ?? User?.FindFirst("preferred_username")?.Value ?? "AD").Length)).ToUpper())
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-medium small text-truncate user-info-name">@(User?.FindFirst("preferred_username")?.Value ?? User?.Identity?.Name)</div>
                                <div class="text-muted user-info-role">@Localizer["Administrator"]</div>
                        </div>
                    </div>
                    <a href="/Account/Logout" class="text-muted" title="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Main Content Area *@
    <div class="main-content">
        @* Header *@
        <header class="top-header">
            <div class="d-flex align-items-center justify-content-between">
                @* Mobile Menu Toggle *@
                <button class="btn btn-link d-md-none p-0 text-dark" id="sidebar-toggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                
                @* Breadcrumbs *@
                <nav aria-label="breadcrumb" class="d-none d-md-block">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin" class="text-decoration-none">@Localizer["Admin"]</a></li>
                        @if (!string.IsNullOrEmpty(ViewData["Breadcrumb"]?.ToString()))
                        {
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Breadcrumb"]</li>
                        }
                    </ol>
                </nav>
                
                @* Right Side *@
                <div class="d-flex align-items-center gap-3">
<a href="/" class="btn btn-outline-primary btn-sm d-none d-sm-inline-flex align-items-center gap-1" title="@Localizer["BackToHome"]">
  <svg class="icon icon-tabler icon-tabler-home" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
    <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
    <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
  </svg>
  <span>@Localizer["BackToHome"]</span>
</a>
<a href="/" class="btn btn-outline-primary btn-sm d-sm-none" title="@Localizer["BackToHome"]">
    <svg class="icon icon-tabler icon-tabler-home" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
        <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
        <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
    </svg>
</a>
                    <div class="admin-nav-width">
                        <partial name="_LanguageSelector" />
                    </div>
                </div>
            </div>
        </header>
        
        @* Scrollable Content Wrapper *@
        <div class="content-scroll-wrapper">
            @* Main Content *@
            <main class="flex-grow-1 p-4">
                @RenderBody()
            </main>
            
            @* Footer *@
            <footer class="admin-footer">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center text-muted small">
                    <p class="mb-2 mb-md-0">Â© @DateTime.Now.Year @productName. @Localizer["AllRightsReserved"]</p>
                    <div class="d-flex gap-3">
                        <a href="/Privacy" class="text-decoration-none text-muted">@Localizer["PrivacyPolicy"]</a>
                        <span>|</span>
                        <a href="/Admin/Docs/Quickstart" target="_blank" class="text-decoration-none text-muted">@Localizer["Documentation"]</a>
                        <span>|</span>
                        <a href="#" class="text-decoration-none text-muted">@Localizer["Support"]</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    @* Mobile Overlay *@
    <div class="mobile-overlay" id="mobile-overlay"></div>
    
    @* Bootstrap 5 JS *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @* Admin Layout Scripts (includes Vue loading bar handler) *@
    <script src="~/js/language.js" asp-append-version="true"></script>
    <script src="~/js/admin-layout.js" asp-append-version="true"></script>
    
    @* Page-specific scripts (e.g., Vue.js bundles) *@
    @RenderSection("Scripts", required: false)
</body>
</html>
