@using Microsoft.AspNetCore.Localization
@using Core.Domain.Constants
@using static Core.Domain.Constants.AuthConstants
@using Core.Domain
@using Microsoft.AspNetCore.Identity
@using Web.IdP.Helpers
@using Microsoft.Extensions.Options
@using Web.IdP.Options
@using Web.IdP.Services
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<ApplicationRole> RoleManager
@inject IOptions<BrandingOptions> BrandingOptions
@inject IViteManifestService ViteService
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}
<!DOCTYPE html>
<html lang="@currentCulture" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="locale" content="@currentCulture" />
    <title>@ViewData["Title"] - @BrandingOptions.Value.ProductName</title>
    @if (User.Identity?.IsAuthenticated == true)
    {
        var activeRole = User.Claims.FirstOrDefault(c => c.Type == "active_role")?.Value 
                         ?? User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
        if (!string.IsNullOrEmpty(activeRole))
        {
            <meta name="active-role" content="@activeRole" />
        }
    }
    
    @* Tailwind CSS *@
    @if (ViteService.IsDevelopment)
    {
        <script type="module" vite-src="@@vite/client"></script>
    }
    <link href="@ViteService.GetScriptPath("src/styles/main.css")" rel="stylesheet" />
    <script type="module" vite-src="src/scripts/razor.js"></script>
    
    @* Google Fonts - Roboto *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/Web.IdP.styles.css" asp-append-version="true" />
</head>
<body class="h-full flex flex-col google-font">
    @if (User.Identity is System.Security.Claims.ClaimsIdentity claimsIdentity && claimsIdentity.Actor != null)
    {
        <div class="bg-yellow-50 text-yellow-800 text-center p-2 border-b border-yellow-200" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @string.Format(Localizer["ImpersonatingUser"], User.Identity.Name)
            <button id="stopImpersonationBtn" class="ml-3 px-2 py-1 text-xs font-bold text-yellow-900 border border-yellow-900 rounded hover:bg-yellow-100">
                <i class="bi bi-x-circle me-1"></i>
                @Localizer["StopImpersonation"]
            </button>
        </div>
    }
    <header class="bg-white border-b border-gray-200">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                @* Logo / Brand *@
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a class="flex items-center text-xl font-bold text-gray-900 no-underline hover:no-underline" asp-area="" asp-page="/Index">
                            <i class="bi bi-shield-lock mr-2"></i> @BrandingOptions.Value.ProductName
                        </a>
                    </div>
                </div>
                
                @* Desktop Menu *@
                <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        // Get user permissions for menu visibility
                        var userPermissions = await PermissionHelper.GetUserPermissionsAsync(UserManager, RoleManager, User);
                        var hasAdminPermissions = User.IsInRole(Roles.Admin);
                        var hasClientScopePermissions = 
                        User.IsInRole(Roles.ApplicationManager) ||
                        userPermissions.Contains(Permissions.Clients.Read) ||
                        userPermissions.Contains(Permissions.Scopes.Read);
                        
                        <!-- User Dropdown -->
                        <div class="ml-3 relative group">
                            <div>
                            <button type="button" class="flex text-sm rounded-full items-center gap-3 px-3 py-2 hover:bg-gray-100 transition-colors cursor-pointer border border-transparent hover:border-gray-200" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                                    <span class="sr-only">Open user menu</span>
                                    <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center text-white font-medium shadow-sm">
                                        @{  
                                            var userName = User.Identity.Name ?? "?";
                                            var userInitials = string.IsNullOrEmpty(userName) ? "?" : 
                                                (userName.Contains("@@") ? userName.Substring(0, Math.Min(2, userName.IndexOf('@'))).ToUpper() : userName.Substring(0, Math.Min(2, userName.Length)).ToUpper());
                                        }
                                        @userInitials
                                    </div>
                                    <div class="text-left">
                                        <div class="text-sm font-medium text-gray-900">@User.Identity.Name</div>
                                        <div class="text-xs text-gray-500">@Localizer["MyAccount"]</div>
                                    </div>
                                    <i class="bi bi-chevron-down text-gray-400 text-xs ml-1"></i>
                                </button>
                            </div>
                            <!-- Dropdown menu -->
                            <div class="origin-top-right absolute right-0 mt-1 w-56 rounded-lg border border-gray-200 py-1 bg-white focus:outline-none hidden group-hover:block z-50">
                                @if (User.IsInRole(Roles.Admin) && hasAdminPermissions)
                                {
                                    <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-page="/Admin/Index">
                                        <i class="bi bi-speedometer2 mr-2"></i> @Localizer["AdminConsole"]
                                    </a>
                                    <div class="border-t border-gray-100 my-1"></div>
                                }
                                else if (hasClientScopePermissions)
                                {
                                    <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-page="/ApplicationManager/Index">
                                        <i class="bi bi-diagram-3 mr-2"></i> @Localizer["ApplicationManager"]
                                    </a>
                                    <div class="border-t border-gray-100 my-1"></div>
                                }
                                
                                <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-page="/Account/Authorizations">
                                    <i class="bi bi-shield-check mr-2"></i> @Localizer["AuthorizationManagement"]
                                </a>
                                <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-page="/Account/LinkedAccounts">
                                    <i class="bi bi-person-lines-fill mr-2"></i> @Localizer["LinkedAccounts"]
                                </a>
                                <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-page="/Account/Profile">
                                    <i class="bi bi-person-circle mr-2"></i> @Localizer["Profile"]
                                </a>
                                <div class="border-t border-gray-100 my-1"></div>
                                <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-page="/Account/Logout">
                                    <i class="bi bi-box-arrow-right mr-2"></i> @Localizer["Logout"]
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm" asp-page="/Account/Register">
                            @Localizer["Register"]
                        </a>
                        <a class="btn-google-blue px-4 py-2 rounded text-sm" asp-page="/Account/Login">
                            @Localizer["Login"]
                        </a>
                    }
                    
                    <div class="ml-4">
                        <partial name="_LanguageSelector" />
                    </div>
                </div>

                @* Mobile menu button *@
                <div class="-mr-2 flex items-center sm:hidden">
                    <button type="button" class="bg-white inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <i class="bi bi-list text-2xl"></i>
                    </button>
                </div>
            </div>
        </nav>
        
        @* Mobile Menu *@
        <div class="hidden sm:hidden bg-white border-t border-gray-200" id="mobile-menu">
            <div class="pt-2 pb-3 space-y-1">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
                        <div class="flex items-center">
                             <div class="flex-shrink-0">
                                <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center text-white font-bold text-lg">
                                    @{
                                        var userName = User.Identity.Name ?? "?";
                                        var initial = string.IsNullOrEmpty(userName) ? "?" : userName.Substring(0, 1).ToUpper();
                                    }
                                    @initial
                                </div>
                            </div>
                            <div class="ml-3">
                                <div class="text-base font-medium text-gray-800">@User.Identity.Name</div>
                            </div>
                        </div>
                    </div>
                    
                    var userPermissions = await PermissionHelper.GetUserPermissionsAsync(UserManager, RoleManager, User);
                    var hasAdminPermissions = User.IsInRole(Roles.Admin);
                    var hasClientScopePermissions = 
                    User.IsInRole(Roles.ApplicationManager) ||
                    userPermissions.Contains(Permissions.Clients.Read) ||
                    userPermissions.Contains(Permissions.Scopes.Read);
                    
                    if (User.IsInRole(Roles.Admin) && hasAdminPermissions)
                    {
                         <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Admin/Index">
                            <i class="bi bi-speedometer2 mr-2"></i> @Localizer["AdminConsole"]
                        </a>
                    }
                    else if (hasClientScopePermissions)
                    {
                        <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/ApplicationManager/Index">
                            <i class="bi bi-diagram-3 mr-2"></i> @Localizer["ApplicationManager"]
                        </a>
                    }
                    
                    <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Account/Authorizations">
                        <i class="bi bi-shield-check mr-2"></i> @Localizer["AuthorizationManagement"]
                    </a>
                    <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Account/LinkedAccounts">
                        <i class="bi bi-person-lines-fill mr-2"></i> @Localizer["LinkedAccounts"]
                    </a>
                    <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Account/Profile">
                        <i class="bi bi-person-circle mr-2"></i> @Localizer["Profile"]
                    </a>
                    <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Account/Logout">
                        <i class="bi bi-box-arrow-right mr-2"></i> @Localizer["Logout"]
                    </a>
                }
                else
                {
                    <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Account/Login">
                        <i class="bi bi-box-arrow-in-right mr-1"></i> @Localizer["Login"]
                    </a>
                    <a class="block px-4 py-2 text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-100" asp-page="/Account/Register">
                        <i class="bi bi-person-plus mr-1"></i> @Localizer["Register"]
                    </a>
                }
                 <div class="px-4 py-2">
                    <partial name="_LanguageSelector" />
                </div>
            </div>
        </div>
    </header>
    
    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        @{
            var brandingService = Context.RequestServices.GetRequiredService<Core.Application.IBrandingService>();
            var footerCopyright = await brandingService.GetCopyrightAsync();
            var footerPoweredBy = await brandingService.GetPoweredByAsync();
        }
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center text-xs text-gray-500 gap-2 md:gap-0">
                <div class="text-center md:text-left">
                    @footerCopyright â€¢ @Localizer["AllRightsReserved"]
                    @if (!string.IsNullOrEmpty(footerPoweredBy))
                    {
                        <span class="ml-2 text-gray-400">@footerPoweredBy</span>
                    }
                </div>
                <div class="flex items-center gap-4">
                    <a asp-area="" asp-page="/Privacy" class="hover:text-gray-700">
                        @Localizer["Privacy"]
                    </a>
                    <a href="/Docs/Index" class="hover:text-gray-700">
                        @Localizer["Documentation"]
                    </a>
                </div>
            </div>
        </div>
    </footer>

    @* Removed Bootstrap Bundle JS & Legacy Scripts (Conflicting with razor.js) *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    @* <script src="~/js/language.js" asp-append-version="true"></script> *@
    @* <script src="~/js/menu.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_CookieConsent" />
</body>
</html>

