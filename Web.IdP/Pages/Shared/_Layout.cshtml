@using Microsoft.AspNetCore.Localization
@using Core.Domain.Constants
@using static Core.Domain.Constants.AuthConstants
@using Core.Domain
@using Microsoft.AspNetCore.Identity
@using Web.IdP.Helpers
@using Microsoft.Extensions.Options
@using Web.IdP.Options
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<ApplicationRole> RoleManager
@inject IOptions<BrandingOptions> BrandingOptions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @BrandingOptions.Value.ProductName</title>
    @if (User.Identity?.IsAuthenticated == true)
    {
        var activeRole = User.Claims.FirstOrDefault(c => c.Type == "active_role")?.Value 
                         ?? User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
        if (!string.IsNullOrEmpty(activeRole))
        {
            <meta name="active-role" content="@activeRole" />
        }
    }
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.IdP.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity is System.Security.Claims.ClaimsIdentity claimsIdentity && claimsIdentity.Actor != null)
    {
        <div class="alert alert-warning text-center m-0 p-2 rounded-0 border-0 border-bottom border-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @string.Format(Localizer["ImpersonatingUser"], User.Identity.Name)
            <button id="stopImpersonationBtn" class="btn btn-sm btn-outline-dark ms-3 fw-bold">
                <i class="bi bi-x-circle me-1"></i>
                @Localizer["StopImpersonation"]
            </button>
        </div>
        <script>
            document.getElementById('stopImpersonationBtn').addEventListener('click', async () => {
                try {
                    const response = await fetch('/api/admin/users/stop-impersonation', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        const data = await response.json();
                        alert(data.error || 'Failed to stop impersonation');
                    }
                } catch (error) {
                    console.error('Error stopping impersonation:', error);
                    alert('An error occurred');
                }
            });
        </script>
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm google-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-shield-lock"></i> @BrandingOptions.Value.ProductName
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav align-items-sm-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                                // Get user permissions for menu visibility
                                var userPermissions = await PermissionHelper.GetUserPermissionsAsync(UserManager, RoleManager, User);
                                var hasAdminPermissions = User.IsInRole(Roles.Admin);
                                var hasClientScopePermissions = 
                                User.IsInRole(Roles.ApplicationManager) ||
                                userPermissions.Contains(Permissions.Clients.Read) ||
                                userPermissions.Contains(Permissions.Scopes.Read);
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle p-0" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-profile">
                                        <div class="user-avatar">
                                            @{
                                                var userName = User.Identity.Name ?? "?";
                                                var initial = string.IsNullOrEmpty(userName) ? "?" : userName.Substring(0, 1).ToUpper();
                                            }
                                            @initial
                                        </div>
                                        <span class="user-name">@Localizer["Hello"], @User.Identity.Name</span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @* Show Admin Console if user is Admin or has admin-level permissions *@
                                    @if (User.IsInRole(Roles.Admin) && hasAdminPermissions)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Index">
                                                <i class="bi bi-speedometer2"></i> @Localizer["AdminConsole"]
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    @* Show ApplicationManager if user has client/scope read permissions (but not Admin role) *@
                                    else if (hasClientScopePermissions)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/ApplicationManager/Index">
                                                <i class="bi bi-diagram-3"></i> @Localizer["ApplicationManager"]
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Authorizations">
                                            <i class="bi bi-shield-check"></i> @Localizer["AuthorizationManagement"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/LinkedAccounts">
                                            <i class="bi bi-person-lines-fill"></i> @Localizer["LinkedAccounts"]
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Logout">
                                            <i class="bi bi-box-arrow-right"></i> @Localizer["Logout"]
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> @Localizer["Login"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus"></i> @Localizer["Register"]
                                </a>
                            </li>
                        }
                        <li class="nav-item dropdown ms-sm-2">
                            <partial name="_LanguageSelector" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="google-footer">
        <div class="container">
            <div class="footer-content">
                <div>
                    @Localizer["FooterCopyright"] • @Localizer["AllRightsReserved"]
                </div>
                <div>
                    <a asp-area="" asp-page="/Privacy">
                        <i class="bi bi-shield-check"></i> @Localizer["Privacy"]
                    </a>
                    <span class="mx-2">|</span>
                        <a href="/Docs/Index" class="text-decoration-none text-muted">
                        <i class="bi bi-journal-text"></i> @Localizer["Documentation"]
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/language.js" asp-append-version="true"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_CookieConsent" />
</body>
</html>
