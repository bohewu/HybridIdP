@using Web.IdP.Options
@using Core.Application
@using Microsoft.AspNetCore.Localization
@model LoginNotice
@inject ILocalizationService LocalizationService

@if (Model != null && !string.IsNullOrWhiteSpace(Model.Message))
{
    // Support i18n: if message starts with @, treat it as a localization key from DB
    var message = Model.Message;
    if (message.StartsWith("@"))
    {
        var key = message.Substring(1);
        var culture = Context.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "en-US";
        var localized = await LocalizationService.GetLocalizedStringAsync(key, culture);
        message = localized ?? message; // Fallback to key if not found
    }
    
    var cssClass = Model.Type?.ToLower() switch
    {
        "info" => "bg-blue-50 border-blue-400 text-blue-700",
        "warning" => "bg-yellow-50 border-yellow-400 text-yellow-800",
        "success" => "bg-green-50 border-green-400 text-green-700",
        "error" => "bg-red-50 border-red-400 text-red-700",
        "muted" => "bg-gray-50 border-gray-300 text-gray-600",
        _ => "bg-blue-50 border-blue-400 text-blue-700"
    };
    
    var iconClass = Model.Type?.ToLower() switch
    {
        "info" => "text-blue-500",
        "warning" => "text-yellow-500",
        "success" => "text-green-500",
        "error" => "text-red-500",
        "muted" => "text-gray-400",
        _ => "text-blue-500"
    };
    
    <div class="login-notice border-l-4 p-3 rounded-r text-sm @cssClass" role="alert">
        <div class="flex items-start">
            <span class="mr-2 @iconClass">
                @switch (Model.Type?.ToLower())
                {
                    case "warning":
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        break;
                    case "error":
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        break;
                    case "success":
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        break;
                    default:
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                        break;
                }
            </span>
            <span>@Html.Raw(message)</span>
        </div>
    </div>
}
