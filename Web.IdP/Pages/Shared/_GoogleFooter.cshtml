@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<Web.IdP.SharedResource> Localizer
@inject Core.Application.IBrandingService BrandingService
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en-US";
    var copyright = await BrandingService.GetCopyrightAsync();
}

<div class="google-footer mt-4">
     <select class="language-select bg-transparent border-0 text-xs cursor-pointer focus:outline-none focus:ring-0 text-gray-600" aria-label="@Localizer["Language"]">
        <option value="en-US" selected="@(currentCulture == "en-US")">English (United States)</option>
        <option value="zh-TW" selected="@(currentCulture == "zh-TW")">繁體中文 (台灣)</option>
    </select>
    <div class="flex gap-4 text-xs">
        <span class="text-gray-500">@copyright</span>
        <a href="/Privacy" class="hover:text-gray-900">@Localizer["Privacy"]</a>
        <a href="/Docs" class="hover:text-gray-900">@Localizer["Help"]</a>
    </div>
</div>

