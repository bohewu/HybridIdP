@using Microsoft.AspNetCore.Localization

@{
    var cultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = cultureFeature?.RequestCulture.Culture.Name ?? "zh-TW";
}

<select id="language-selector" class="language-select block w-full pl-3 pr-8 py-1 text-sm border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 rounded-md shadow-sm" aria-label="Language selection">
    <option value="zh-TW" selected="@(currentCulture == "zh-TW")">繁體中文</option>
    <option value="en-US" selected="@(currentCulture == "en-US")">English</option>
</select>
