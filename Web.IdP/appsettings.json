{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseProvider": "SqlServer",
  "Branding": {
    "AppName": "HybridAuth",
    "ProductName": "HybridAuth IdP"
  },
  "TokenOptions": {
    "AccessTokenLifetimeMinutes": 60,
    "RefreshTokenLifetimeMinutes": 20160,
    "DeviceCodeLifetimeMinutes": 30
  },
  "Turnstile": {
    "Enabled": false,
    "SiteKey": "",
    "SecretKey": ""
  },
  "Observability": {
    "PrometheusEnabled": true,
    "AllowedIPs": [
      "127.0.0.1",
      "::1"
    ]
  }
}
