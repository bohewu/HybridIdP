{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseProvider": "SqlServer",
  "Branding": {
    "AppName": "HybridAuth",
    "ProductName": "HybridAuth IdP",
    "Copyright": "Â© 2025 - HybridAuth IdP",
    "PoweredBy": ""
  },
  "Cookies": {
    "Prefix": ".IdP"
  },
  "TokenOptions": {
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeMinutes": 20160,
    "DeviceCodeLifetimeMinutes": 15,
    "RefreshTokenReuseLeewaySeconds": 60
  },
  "Turnstile": {
    "Enabled": false,
    "SiteKey": "",
    "SecretKey": ""
  },
  "Fido2": {
    "ServerDomain": "localhost",
    "Origins": [
      "https://localhost:7035"
    ],
    "TimestampDriftTolerance": 300000
  },
  "Observability": {
    "Enabled": false,
    "PrometheusEnabled": true,
    "AllowedIPs": [
      "127.0.0.1",
      "::1"
    ]
  },
  "RateLimiting": {
    "Enabled": true,
    "LoginPermitLimit": 5,
    "LoginWindowSeconds": 60,
    "TokenPermitLimit": 10,
    "TokenWindowSeconds": 60,
    "AdminApiPermitLimit": 100,
    "AdminApiWindowSeconds": 60,
    "QueueLimit": 2
  },
  "Audit": {
    "PiiMaskingLevel": "Partial"
  },
  "Redis": {
    "Enabled": false,
    "InstanceName": "HybridIdP_"
  },
  "Vite": {
    "Manifest": "dist/.vite/manifest.json"
  }
}