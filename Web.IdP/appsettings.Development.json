{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EmailSettings": {
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "SmtpEnableSsl": false,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromAddress": "dev@hybrididp.com",
    "FromName": "HybridIdP Dev"
  },
  "DatabaseProvider": "SqlServer",
  "ConnectionStrings": {
    "SqlServerConnection": "Server=localhost,1433;Database=hybridauth_idp;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;Encrypt=False",
    "PostgreSqlConnection": "Host=localhost;Port=5432;Database=hybridauth_idp;Username=user;Password=password"
  },
  "Branding": {
    "AppName": "HybridAuth",
    "ProductName": "HybridAuth IdP",
    "LoginNotices": {
      "Top": {
        "Message": "@LoginNotice.DevEnvironment",
        "Type": "warning"
      },
      "Form": {
        "Message": "@LoginNotice.UseCompanyEmail",
        "Type": "info"
      },
      "Bottom": {
        "Message": "@LoginNotice.ContactIT",
        "Type": "muted"
      }
    }
